<%- include('includes/header', { title: 'Admin Login - Job Ecosystem' }) %>

<style>
    /* --- ADMIN LOGIN STYLES --- */
    .admin-login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        position: relative;
        overflow: hidden;
    }

    .admin-login-container::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(220, 53, 69, 0.1) 0%, transparent 50%);
        animation: pulse 15s ease-in-out infinite;
    }

    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    .admin-login-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 3rem;
        width: 100%;
        max-width: 420px;
        position: relative;
        z-index: 1;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
    }

    .admin-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        color: white;
        margin-bottom: 1.5rem;
    }

    .admin-title {
        color: white;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .admin-subtitle {
        color: rgba(255, 255, 255, 0.6);
        text-align: center;
        margin-bottom: 2rem;
        font-size: 0.95rem;
    }

    .admin-input-group {
        margin-bottom: 1.5rem;
    }

    .admin-input-group label {
        display: block;
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.85rem;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .admin-input {
        width: 100%;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.25);
        border-radius: 12px;
        color: #ffffff;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-sizing: border-box;
        font-weight: 500;
        letter-spacing: 0.5px;
    }

    .admin-input:focus {
        outline: none;
        border-color: #dc3545;
        background: rgba(220, 53, 69, 0.15);
        box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.2);
    }

    .admin-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    /* Autofill fix for dark theme */
    .admin-input:-webkit-autofill,
    .admin-input:-webkit-autofill:hover,
    .admin-input:-webkit-autofill:focus {
        -webkit-box-shadow: 0 0 0 30px #2a2a4e inset !important;
        -webkit-text-fill-color: #ffffff !important;
        transition: background-color 5000s ease-in-out 0s;
        caret-color: white;
    }

    /* Password input wrapper */
    .password-wrapper {
        position: relative;
    }

    .password-wrapper .admin-input {
        padding-right: 50px;
    }

    .toggle-password {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.6);
        cursor: pointer;
        padding: 5px;
        font-size: 1.2rem;
        transition: color 0.2s ease;
    }

    .toggle-password:hover {
        color: white;
    }

    .admin-btn {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .admin-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(220, 53, 69, 0.4);
    }

    .admin-btn:disabled {
        opacity: 0.7;
        cursor: not-allowed;
        transform: none;
    }

    .admin-message {
        padding: 1rem;
        border-radius: 12px;
        text-align: center;
        margin-bottom: 1.5rem;
        font-weight: 500;
        display: none;
    }

    .admin-message.error {
        background: rgba(220, 53, 69, 0.2);
        border: 1px solid rgba(220, 53, 69, 0.3);
        color: #ff6b6b;
        display: block;
    }

    .admin-message.success {
        background: rgba(0, 176, 116, 0.2);
        border: 1px solid rgba(0, 176, 116, 0.3);
        color: #00e676;
        display: block;
    }

    .admin-footer {
        margin-top: 2rem;
        text-align: center;
    }

    .admin-footer a {
        color: rgba(255, 255, 255, 0.6);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .admin-footer a:hover {
        color: white;
    }

    .security-notice {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(255, 193, 7, 0.1);
        border: 1px solid rgba(255, 193, 7, 0.3);
        border-radius: 12px;
        padding: 0.75rem 1rem;
        margin-top: 1.5rem;
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .security-notice i {
        color: #ffc107;
    }

    .spinner {
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
        to { transform: rotate(360deg); }
    }
</style>

<div class="admin-login-container">
    <div class="admin-login-card">
        <div class="text-center">
            <span class="admin-badge">
                <i class="ri-shield-star-line"></i>
                SUPER ADMIN
            </span>
        </div>
        
        <h1 class="admin-title">Admin Portal</h1>
        <p class="admin-subtitle">Secure access for platform administrators</p>

        <div id="messageBox" class="admin-message"></div>

        <form id="adminLoginForm">
            <div class="admin-input-group">
                <label for="adminEmail">Admin Email</label>
                <input 
                    type="email" 
                    id="adminEmail" 
                    class="admin-input" 
                    placeholder="admin@jobecosystem.com"
                    required
                >
            </div>

            <div class="admin-input-group">
                <label for="adminPassword">Password</label>
                <div class="password-wrapper">
                    <input 
                        type="password" 
                        id="adminPassword" 
                        class="admin-input" 
                        placeholder="Enter your password"
                        required
                    >
                    <button type="button" class="toggle-password" onclick="togglePassword()">
                        <i class="ri-eye-off-line" id="toggleIcon"></i>
                    </button>
                </div>
            </div>

            <button type="submit" class="admin-btn" id="loginBtn">
                <i class="ri-login-box-line"></i>
                Access Admin Dashboard
            </button>
        </form>

        <div class="security-notice">
            <i class="ri-shield-check-line"></i>
            This area is monitored. Unauthorized access attempts are logged.
        </div>

        <div class="admin-footer">
            <a href="/login"><i class="ri-arrow-left-line"></i> Back to User Login</a>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    // Clear any existing session
    localStorage.removeItem('token');
    localStorage.removeItem('user');
});

// Toggle password visibility
function togglePassword() {
    const passwordInput = document.getElementById('adminPassword');
    const toggleIcon = document.getElementById('toggleIcon');
    
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleIcon.className = 'ri-eye-line';
    } else {
        passwordInput.type = 'password';
        toggleIcon.className = 'ri-eye-off-line';
    }
}

document.getElementById('adminLoginForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const email = document.getElementById('adminEmail').value;
    const password = document.getElementById('adminPassword').value;
    const messageBox = document.getElementById('messageBox');
    const loginBtn = document.getElementById('loginBtn');
    
    // Show loading state
    loginBtn.disabled = true;
    loginBtn.innerHTML = '<div class="spinner"></div> Authenticating...';
    messageBox.className = 'admin-message';
    messageBox.style.display = 'none';
    
    try {
        const response = await fetch('/api/auth/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email, password })
        });
        
        const data = await response.json();
        
        if (response.ok) {
            // Check if user is admin
            if (data.user.role !== 'admin') {
                messageBox.className = 'admin-message error';
                messageBox.textContent = '⚠️ Access Denied. Admin privileges required.';
                loginBtn.disabled = false;
                loginBtn.innerHTML = '<i class="ri-login-box-line"></i> Access Admin Dashboard';
                return;
            }
            
            // Success
            messageBox.className = 'admin-message success';
            messageBox.textContent = '✅ Authentication successful! Redirecting...';
            
            localStorage.setItem('token', data.token);
            localStorage.setItem('user', JSON.stringify(data.user));
            
            setTimeout(() => {
                window.location.href = '/dashboard/admin';
            }, 1000);
            
        } else {
            messageBox.className = 'admin-message error';
            messageBox.textContent = '❌ ' + (data.error || 'Invalid credentials');
            loginBtn.disabled = false;
            loginBtn.innerHTML = '<i class="ri-login-box-line"></i> Access Admin Dashboard';
        }
        
    } catch (err) {
        console.error('Login error:', err);
        messageBox.className = 'admin-message error';
        messageBox.textContent = '❌ Connection error. Please try again.';
        loginBtn.disabled = false;
        loginBtn.innerHTML = '<i class="ri-login-box-line"></i> Access Admin Dashboard';
    }
});
</script>

<%- include('includes/footer') %>
