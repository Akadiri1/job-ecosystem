    <%- include(sidebar) %>
    <div class="container-fluid">

        <!-- AI Hero Banner -->
        <div class="ai-hero">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1><i class="ri-robot-line me-2"></i>AI Insights Dashboard</h1>
                    <p>Your intelligent assistant monitoring team performance, tasks, and attendance</p>
                </div>
                <div class="col-md-4 text-end">
                    <button class="btn btn-light" onclick="generateInsights()">
                        <i class="ri-refresh-line me-1"></i> Refresh Insights
                    </button>
                </div>
            </div>
        </div>

        <!-- Stats Row -->
        <div class="row g-3 mb-4">
