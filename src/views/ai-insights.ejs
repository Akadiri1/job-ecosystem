<script>
// Global state
let isClockedIn = false;
let currentAttendance = null;

// Initialize
document.addEventListener('DOMContentLoaded', function() {
    updateClock();
    setInterval(updateClock, 1000);
    
    loadDashboard();
    loadMyAttendance();
    loadTeamAttendance();
});

// Update clock display
function updateClock() {
    const now = new Date();
    document.getElementById('current-time').textContent = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
    document.getElementById('current-date').textContent = now.toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' });
}

// Load dashboard data
async function loadDashboard() {
    const token = localStorage.getItem('token');
    try {
        const res = await fetch('/api/ai/dashboard', {
            headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await res.json();
        
        if (data.success) {
            // Update stats
            document.getElementById('stat-team-total').textContent = data.stats.team.total;
            document.getElementById('stat-clocked-in').textContent = data.stats.team.clockedIn;
            document.getElementById('stat-tasks-due').textContent = data.stats.tasks.dueToday;
            document.getElementById('stat-overdue').textContent = data.stats.tasks.overdue;
            
            // Render insights
            renderInsights(data.insights);
            
            // Render leaderboard
            renderLeaderboard(data.leaderboard);
            
            // Render underperformers
            if (data.underperformers && data.underperformers.length > 0) {
                renderUnderperformers(data.underperformers);
            }
        }
    } catch (e) {
        console.error('Dashboard load error:', e);
    }
}

// Render insights
function renderInsights(insights) {
    const container = document.getElementById('insights-container');
    document.getElementById('insight-count').textContent = `${insights.length} active`;
    
    if (insights.length === 0) {
        container.innerHTML = `
            <div class="empty-state">
                <i class="ri-check-double-line"></i>
                <p>All caught up! No active insights.</p>
            </div>
        `;
        return;
    }
    
    container.innerHTML = insights.map(insight => {
        const iconMap = {
            'task_overdue': 'ri-alarm-warning-line',
            'task_reminder': 'ri-notification-line',
            'task_unaccepted': 'ri-user-unfollow-line',
            'performance_low': 'ri-arrow-down-line',
            'performance_high': 'ri-trophy-line',
            'attendance_late': 'ri-time-line',
            'attendance_absent': 'ri-user-unfollow-line'
        };
        
        return `
            <div class="insight-card ${insight.severity}">
                <div class="insight-title">
                    <i class="${iconMap[insight.type] || 'ri-lightbulb-line'}"></i>
                    ${insight.title}
                </div>
                <div class="insight-message">${insight.message}</div>
                <div class="insight-actions">
                    ${insight.action_url ? `<a href="${insight.action_url}" class="btn btn-sm btn-primary-light">View</a>` : ''}
                    <button class="btn btn-sm btn-light" onclick="dismissInsight('${insight.id}')">Dismiss</button>
                </div>
            </div>
        `;
    }).join('');
}

// Render leaderboard
function renderLeaderboard(leaderboard) {
    const container = document.getElementById('leaderboard-container');
    
    if (leaderboard.length === 0) {
        container.innerHTML = '<div class="empty-state"><i class="ri-trophy-line"></i><p>No performance data yet</p></div>';
        return;
    }
    
    container.innerHTML = leaderboard.map((member, index) => `
        <div class="leaderboard-item">
            <div class="rank">${index + 1}</div>
            <img src="${member.user?.profile_picture_url || '/build/assets/images/faces/1.jpg'}" class="member-avatar" alt="">
            <div class="member-info">
                <div class="member-name">${member.user?.full_name || 'Unknown'}</div>
                <div class="member-stats">${member.completedTasks}/${member.totalTasks} tasks • ${member.totalHoursThisWeek}h this week</div>
            </div>
            <span class="completion-badge">${member.completionRate}%</span>
        </div>
    `).join('');
}

// Render underperformers
function renderUnderperformers(underperformers) {
    const section = document.getElementById('underperformers-section');
    const container = document.getElementById('underperformers-container');
    
    section.style.display = 'block';
    container.innerHTML = underperformers.map(member => `
        <div class="underperformer-card">
            <img src="${member.user?.profile_picture_url || '/build/assets/images/faces/1.jpg'}" class="avatar" alt="">
            <div class="flex-fill">
                <div class="fw-semibold">${member.user?.full_name || 'Unknown'}</div>
                <small class="text-muted">${member.completionRate}% completion • ${member.overdueTasks} overdue</small>
            </div>
            <a href="#" class="btn btn-sm btn-outline-danger">Review</a>
        </div>
    `).join('');
}

// Load my attendance
async function loadMyAttendance() {
    const token = localStorage.getItem('token');
    try {
        const res = await fetch('/api/ai/attendance/me', {
            headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await res.json();
        
        if (data.success) {
            currentAttendance = data.attendance;
            isClockedIn = data.isClockedIn;
            updateClockButton();
        }
    } catch (e) {
        console.error('Attendance load error:', e);
    }
}

// Update clock button state
function updateClockButton() {
    const btn = document.getElementById('clock-btn');
    const status = document.getElementById('attendance-status');
    
    if (isClockedIn) {
        btn.className = 'clock-btn clock-out';
        btn.innerHTML = '<i class="ri-logout-box-line"></i><span>Clock Out</span>';
        
        if (currentAttendance?.clock_in) {
            const clockInTime = new Date(currentAttendance.clock_in).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
            status.innerHTML = `<i class="ri-time-line me-1"></i> Clocked in at ${clockInTime}`;
        }
    } else {
        btn.className = 'clock-btn clock-in';
        btn.innerHTML = '<i class="ri-login-box-line"></i><span>Clock In</span>';
        
        if (currentAttendance?.clock_out) {
            status.innerHTML = `<i class="ri-check-line me-1"></i> Completed ${currentAttendance.total_hours} hours today`;
        } else {
            status.innerHTML = '<i class="ri-information-line me-1"></i> Not clocked in yet';
        }
    }
}

// Toggle clock in/out
async function toggleClock() {
    const token = localStorage.getItem('token');
    const endpoint = isClockedIn ? '/api/ai/attendance/clock-out' : '/api/ai/attendance/clock-in';
    
    try {
        const res = await fetch(endpoint, {
            method: 'POST',
            headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await res.json();
        
        if (data.success) {
            Toastify({ text: data.message, backgroundColor: '#00b074' }).showToast();
            currentAttendance = data.attendance;
            isClockedIn = !isClockedIn;
            updateClockButton();
            loadTeamAttendance();
        } else {
            Toastify({ text: data.message, backgroundColor: '#ff5b5c' }).showToast();
        }
    } catch (e) {
        console.error('Clock toggle error:', e);
        Toastify({ text: 'Error: ' + e.message, backgroundColor: '#ff5b5c' }).showToast();
    }
}

// Load team attendance
async function loadTeamAttendance() {
    const token = localStorage.getItem('token');
    try {
        const res = await fetch('/api/ai/attendance', {
            headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await res.json();
        
        if (data.success) {
            renderTeamAttendance(data.attendance);
        }
    } catch (e) {
        console.error('Team attendance error:', e);
    }
}

// Render team attendance
function renderTeamAttendance(attendance) {
    const container = document.getElementById('attendance-list');
    
    if (attendance.length === 0) {
        container.innerHTML = '<div class="text-center py-3 text-muted">No team members</div>';
        return;
    }
    
    container.innerHTML = attendance.map(member => {
        const statusBadge = member.isClockedIn 
            ? '<span class="badge bg-success-transparent">Active</span>'
            : member.attendance?.clock_out
                ? '<span class="badge bg-secondary-transparent">Completed</span>'
                : '<span class="badge bg-warning-transparent">Not In</span>';
        
        return `
            <div class="list-group-item d-flex align-items-center">
                <img src="${member.user?.profile_picture_url || '/build/assets/images/faces/1.jpg'}" 
                     class="avatar avatar-sm rounded-circle me-2" alt="">
                <div class="flex-fill">
                    <div class="fw-medium">${member.user?.full_name || 'Unknown'}</div>
                    <small class="text-muted">${member.role}</small>
                </div>
                ${statusBadge}
            </div>
        `;
    }).join('');
}

// Generate insights manually
async function generateInsights() {
    const token = localStorage.getItem('token');
    Toastify({ text: 'Generating insights...', backgroundColor: '#667eea' }).showToast();
    
    try {
        const res = await fetch('/api/ai/insights/generate', {
            method: 'POST',
            headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await res.json();
        
        if (data.success) {
            Toastify({ text: data.message, backgroundColor: '#00b074' }).showToast();
            loadDashboard();
        }
    } catch (e) {
        console.error('Generate insights error:', e);
    }
}

// Dismiss insight
async function dismissInsight(id) {
    const token = localStorage.getItem('token');
    
    try {
        const res = await fetch(`/api/ai/insights/${id}/dismiss`, {
            method: 'POST',
            headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await res.json();
        
        if (data.success) {
            loadDashboard();
        }
    } catch (e) {
        console.error('Dismiss error:', e);
    }
}
</script>
