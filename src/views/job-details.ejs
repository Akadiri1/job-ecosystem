<script>
    let currentJob = null;
    let currentUserId = null;
    let isOwner = false;

    document.addEventListener("DOMContentLoaded", async function() {
        const token = localStorage.getItem('token');
        if (!token) {
            window.location.href = '/login';
            return;
        }

        // Get current user ID from token
        try {
            const payload = JSON.parse(atob(token.split('.')[1]));
            currentUserId = payload.id;
        } catch (e) {
            console.log('Could not parse token');
        }

        // Get job ID from URL
        const pathParts = window.location.pathname.split('/');
        const jobId = pathParts[2]; // /jobs/:id
        
        if (jobId && jobId !== 'feed' && jobId !== 'manage' && jobId !== 'create') {
            await loadJobDetails(jobId);
        }
    });

    async function loadJobDetails(jobId) {
        if (!jobId) {
             const pathParts = window.location.pathname.split('/');
             jobId = pathParts[pathParts.length - 1]; 
        }

        try {
            const token = localStorage.getItem('token');
            const headers = { 'Content-Type': 'application/json' };
            if (token) {
                headers['Authorization'] = `Bearer ${token}`;
            }

            const response = await fetch(`/api/jobs/${jobId}`, {
                headers: headers
            });

            if (!response.ok) {
                const data = await response.json();
                throw new Error(data.error || 'Job not found');
            }

            const data = await response.json();
            currentJob = data.job; // Store for global use
            populateJobDetails(data); // Pass full data object (includes hasApplied, isSaved)
        } catch (error) {
            console.error("Error loading job:", error);
            // alert('Job not found'); 
            // window.location.href = '/jobs/feed';
        }
    }

    function populateJobDetails(data) {
        // Handle both full response {job, hasApplied...} and direct job object
        const job = data.job ? data.job : data; 
        
        console.log("ðŸ” FRONTEND DEBUG: Full Data Received:", data);
        console.log("ðŸ” FRONTEND DEBUG: isSaved flag:", data.isSaved);

        if (!job) return;

        // Debug - log the job data
        console.log('Job data received:', job);

        // Helper function to format salary
        function formatSalary(salary) {
            if (!salary) return 'Competitive';
            const symbols = { 'USD': '$', 'EUR': 'â‚¬', 'GBP': 'Â£', 'NGN': 'â‚¦' };
            const symbol = symbols[job.currency] || 'â‚¦';
            
            // If salary is just numbers, format it with commas
            if (/^\d+$/.test(salary.replace(/,/g, ''))) {
                return symbol + parseInt(salary.replace(/,/g, '')).toLocaleString();
            }
            
            return `${symbol} ${salary}`; 
        }

        // Helper function to format job type
        function formatJobType(type) {
            if (!type) return 'Full-time';
            return type.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
        }

        function getJobIcon(job) {
            const title = (job.title || '').toLowerCase();
            const category = (job.category || '').toLowerCase();
            let skills = '';
            if (Array.isArray(job.skills)) {
                // job.skills is already parsed by populateJobDetails before calling this? No, it passes raw job object.
                // But in populateJobDetails we try parsed skills?
                // Let's rely on checking the format again to be safe.
                skills = job.skills.map(s => String(s).toLowerCase()).join(' ');
            } else if (typeof job.skills === 'string') {
                 // Try parsing just in case it's a JSON string
                 try {
                    const parsed = JSON.parse(job.skills);
                    if (Array.isArray(parsed)) skills = parsed.map(s => String(s).toLowerCase()).join(' ');
                    else skills = job.skills.toLowerCase();
                 } catch(e) {
                    skills = job.skills.toLowerCase();
                 }
            }
    
            // Map keywords to icon numbers
            if (title.includes('react') || skills.includes('react')) return '/build/assets/images/media/jobs/1.png';
            if (title.includes('html') || title.includes('css') || skills.includes('html')) return '/build/assets/images/media/jobs/2.png';
            if (title.includes('vue') || skills.includes('vue')) return '/build/assets/images/media/jobs/3.png';
            if (title.includes('wordpress') || title.includes('php')) return '/build/assets/images/media/jobs/4.png';
            if (title.includes('python') || skills.includes('python')) return '/build/assets/images/media/jobs/1.png';
            if (title.includes('java') || skills.includes('java')) return '/build/assets/images/media/jobs/2.png';
            if (title.includes('node') || skills.includes('node')) return '/build/assets/images/media/jobs/3.png';
            if (title.includes('angular') || skills.includes('angular')) return '/build/assets/images/media/jobs/4.png';
            if (category.includes('design')) return '/build/assets/images/media/jobs/1.png';
            if (category.includes('marketing')) return '/build/assets/images/media/jobs/2.png';
            
            // Default
            const iconNum = (parseInt(job.id) || 1) % 4 + 1;
            return `/build/assets/images/media/jobs/${iconNum}.png`;
        }

        // Page title
        const pageTitleEl = document.getElementById('page-job-title');
        if (pageTitleEl) pageTitleEl.innerText = job.title || 'Job Details';
        document.title = `${job.title || 'Job Details'} - Job Ecosystem`;

        // Edit button link
        const editBtn = document.getElementById('edit-job-btn');
        if (editBtn) editBtn.href = `/jobs/${job.id}/edit`;

        // Job Header Section
        const jobIcon = document.getElementById('job-icon');
        if (jobIcon) jobIcon.src = getJobIcon(job);

        const jobTitle = document.getElementById('job-title-text');
        if (jobTitle) jobTitle.innerText = job.title || 'Untitled Job';

        const companyName = document.getElementById('job-company-name');
        if (companyName) companyName.innerText = job.company?.name || 'Company';

        const jobLocation = document.getElementById('job-location');
        if (jobLocation) jobLocation.innerText = job.location || job.company?.location || 'Remote';

        const jobExp = document.getElementById('job-experience');
        if (jobExp) jobExp.innerText = job.experience || 'Any Experience';

        const jobSalary = document.getElementById('job-salary');
        if (jobSalary) jobSalary.innerText = formatSalary(job.salary_range);

        const jobQual = document.getElementById('job-qualification');
        if (jobQual) jobQual.innerText = job.qualification || 'Any Qualification';

        const jobType = document.getElementById('job-type-badge');
        if (jobType) jobType.innerText = formatJobType(job.type);

        const jobVacancies = document.getElementById('job-vacancies-badge');
        if (jobVacancies) jobVacancies.innerText = job.vacancies || '1';

        // Job Description
        const descContainer = document.getElementById('job-description-content');
        if (descContainer) {
            descContainer.innerHTML = job.description 
                ? `<p>${job.description.replace(/\n/g, '</p><p>')}</p>`
                : '<p>No description provided.</p>';
        }

        // Skills
        const skillsContainer = document.getElementById('job-skills-container');
        if (skillsContainer) {
            let skills = [];
            if (job.skills) {
                try {
                    skills = Array.isArray(job.skills) ? job.skills : JSON.parse(job.skills);
                } catch (e) {
                    console.log('Could not parse skills:', job.skills);
                }
            }
            if (skills.length > 0) {
                skillsContainer.innerHTML = skills.map(skill => 
                    `<span class="badge rounded-pill bg-primary-transparent me-1 mb-1">${skill}</span>`
                ).join('');
            } else {
                skillsContainer.innerHTML = '<span class="text-muted">No skills specified</span>';
            }
        }

        // Category
        const categoryText = document.getElementById('job-category-text');
        if (categoryText) categoryText.innerText = job.category || 'Not specified';

        // Sidebar Highlights
        const highlightLoc = document.getElementById('highlight-location');
        if (highlightLoc) highlightLoc.innerText = job.location_type ? formatJobType(job.location_type) : (job.location || 'Remote');

        const highlightType = document.getElementById('highlight-job-type');
        if (highlightType) highlightType.innerText = formatJobType(job.type);

        const highlightSalary = document.getElementById('highlight-salary');
        if (highlightSalary) highlightSalary.innerText = formatSalary(job.salary_range);

        const highlightStatus = document.getElementById('highlight-status');
        if (highlightStatus) {
            const status = job.status || 'active';
            highlightStatus.innerText = status.charAt(0).toUpperCase() + status.slice(1);
            highlightStatus.className = 'ms-auto fw-medium badge ' + 
                (status === 'active' ? 'bg-success-transparent' : 
                 status === 'paused' ? 'bg-warning-transparent' : 'bg-secondary-transparent');
        }

        // --- ACCESS CONTROL LOGIC ---
        // employer_id should be in the job object. We need to compare specific UUIDs.
        if (currentUserId && job.employer_id && currentUserId === job.employer_id) {
            // User OWNS this job
            const empActions = document.getElementById('employer-actions');
            if (empActions) empActions.style.display = 'block';
        } else {
            // User is a Viewer (Seeker or other Employer)
            const seekerActions = document.getElementById('seeker-actions');
            if (seekerActions) seekerActions.style.display = 'block';

            // Check if Applied
            const applyBtn = seekerActions.querySelector('.btn-primary');
            if (data.hasApplied) {
                if (applyBtn) {
                    applyBtn.classList.remove('btn-primary');
                    applyBtn.classList.add('btn-success');
                    applyBtn.innerHTML = '<i class="ri-check-line me-1"></i> Applied';
                    applyBtn.disabled = true;
                    applyBtn.removeAttribute('data-bs-toggle'); // Remove modal trigger
                }
            }

            // Check if Saved
            // Always bind the click handler first if button exists
            const saveBtn = document.getElementById('save-job-btn');
            if (saveBtn) {
                // Remove existing to prevent duplicates if re-populated (simple way is to just assign onclick)
                saveBtn.onclick = () => toggleSave(saveBtn);

                if (data.isSaved) {
                    saveBtn.innerHTML = '<i class="ri-heart-fill text-danger me-1"></i> Saved';
                    saveBtn.classList.add('border-danger');
                } else {
                    // Reset state if not saved
                    saveBtn.innerHTML = '<i class="ri-heart-line me-1"></i> Save';
                    saveBtn.classList.remove('border-danger');
                }
            }
        }
    }

    async function deleteJob() {
        if (!currentJob) return;
        if (!confirm('Are you sure you want to delete this job? This action cannot be undone.')) return;

        const token = localStorage.getItem('token');
        try {
            const response = await fetch(`/api/jobs/${currentJob.id}`, {
                method: 'DELETE',
                headers: { 'Authorization': `Bearer ${token}` }
            });

            if (response.ok) {
                alert('Job deleted successfully!');
                window.location.href = '/jobs/manage';
            } else {
                const data = await response.json();
                alert('Error: ' + (data.error || 'Could not delete job'));
            }
        } catch (error) {
            console.error('Delete error:', error);
            alert('Network error. Please try again.');
        }
    }

    async function toggleSave(btn) {
        if (!currentJob) return;
        const token = localStorage.getItem('token');
        if (!token) {
             window.location.href = '/login';
             return;
        }

        // Optimistic UI update
        // Actually let's check inner HTML icon
        const icon = btn.querySelector('i');
        const isSaved = icon.classList.contains('ri-heart-fill');

        try {
            const response = await fetch(`/api/jobs/${currentJob.id}/save`, {
                method: 'POST',
                headers: { 'Authorization': `Bearer ${token}` }
            });

            const data = await response.json();
            
            if (response.ok) {
                if (data.isSaved) {
                    btn.innerHTML = '<i class="ri-heart-fill text-danger me-1"></i> Saved';
                    btn.classList.add('border-danger');
                } else {
                    btn.innerHTML = '<i class="ri-heart-line me-1"></i> Save';
                    btn.classList.remove('border-danger');
                }
                // Optional: Show toast
            } else {
                alert('Action failed');
            }
        } catch (error) {
            console.error(error);
        }
    }

    function logout() {
        localStorage.clear();
        window.location.href = '/login';
    }

    // --- APPLICATION LOGIC ---

    function openApplicationModal() {
        if (!currentJob) return;
        document.getElementById('modal-job-title').innerText = currentJob.title;
        
        // Pre-fill user details if possible (from token payload or separate fetch if we did one)
        const token = localStorage.getItem('token');
        if(token) {
            try {
                const payload = JSON.parse(atob(token.split('.')[1]));
                document.getElementById('modal-user-name').innerText = payload.name || 'Candidate';
                document.getElementById('modal-email').value = payload.email || '';
            } catch(e) {}
        }

        const modal = new bootstrap.Modal(document.getElementById('applicationModal'));
        modal.show();
    }

    async function submitApplication() {
        const token = localStorage.getItem('token');
        if (!token) return;

        const email = document.getElementById('modal-email').value;
        const resumeFile = document.getElementById('resume-file').files[0];
        const clFile = document.getElementById('cover-letter-file').files[0];
        const clText = document.getElementById('cover-letter-text').value;

        // Validation
        if (!resumeFile && !document.getElementById('resume-url')?.value) {
            Toastify({
                text: "Please provide a resume.",
                duration: 3000,
                close: true,
                gravity: "top", 
                position: "right",
                backgroundColor: "#ff5b5c",
            }).showToast();
            return;
        }

        const btn = document.querySelector('#applicationModal .btn-primary');
        const originalText = '<i class="ri-send-plane-fill me-1"></i> Submit Application';
        btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Sending...';
        btn.disabled = true;

        const formData = new FormData();
        formData.append('cover_letter', clText);
        if (resumeFile) formData.append('resume', resumeFile);
        if (clFile) formData.append('cover_letter_file', clFile);

        try {
            const response = await fetch(`/api/applications/apply/${currentJob.id}`, {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${token}`
                },
                body: formData
            });

            const data = await response.json();

            if (response.ok) {
                // Close Modal
                const modalEl = document.getElementById('applicationModal');
                const modal = bootstrap.Modal.getInstance(modalEl);
                modal.hide();

                Toastify({
                    text: "Application submitted successfully!",
                    duration: 3000,
                    close: true,
                    gravity: "top", 
                    position: "right",
                    backgroundColor: "#00b074", 
                }).showToast();
                
                // Update "Apply Now" button to "Applied"
                const seekerActions = document.getElementById('seeker-actions');
                const applyBtn = seekerActions.querySelector('.btn-primary');
                if (applyBtn) {
                    applyBtn.classList.remove('btn-primary');
                    applyBtn.classList.add('btn-success');
                    applyBtn.innerHTML = '<i class="ri-check-line me-1"></i> Applied';
                    applyBtn.disabled = true;
                    applyBtn.removeAttribute('data-bs-toggle');
                    applyBtn.removeAttribute('onclick');
                }

            } else {
                Toastify({
                    text: data.error || "Failed to submit application",
                    duration: 3000,
                    close: true,
                    gravity: "top", 
                    position: "right",
                    backgroundColor: "#ff5b5c",
                }).showToast();
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        } catch (e) {
            console.error(e);
            Toastify({
                text: "Network error occurred.",
                duration: 3000,
                close: true,
                gravity: "top", 
                position: "right",
                backgroundColor: "#ff5b5c",
            }).showToast();
            btn.disabled = false;
            btn.innerHTML = originalText;
        }
    }

</script>

