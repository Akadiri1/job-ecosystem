                <div class="terms-group">
                    <input type="checkbox" id="terms" required>
                    <label for="terms">
                        I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
                    </label>
                </div>

                <button type="submit" class="submit-btn" id="submitBtn">
                    <i class="ri-user-add-line"></i>
                    Create Account
                </button>
            </form>

            <div class="auth-footer">
                Already have an account? <a href="/login">Sign In</a>
            </div>
        </div>
    </div>
</div>

<script>
// Toggle password visibility
function togglePassword() {
    const passwordInput = document.getElementById('password');
    const toggleIcon = document.getElementById('toggleIcon');
    
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleIcon.className = 'ri-eye-line';
    } else {
        passwordInput.type = 'password';
        toggleIcon.className = 'ri-eye-off-line';
    }
}

// Role selection - change background and content
document.querySelectorAll('input[name="role"]').forEach(radio => {
    radio.addEventListener('change', (e) => {
        const container = document.getElementById('authContainer');
        const tagline = document.getElementById('brandTagline');
        const features = document.getElementById('brandFeatures');
        
        if (e.target.value === 'employer') {
            container.className = 'auth-container employer-mode';
            tagline.textContent = 'Find the perfect candidates for your team. Build your dream workforce today.';
            features.innerHTML = `
                <div class="auth-feature">
                    <i class="ri-user-star-line"></i>
                    <span>Access top talent worldwide</span>
                </div>
                <div class="auth-feature">
                    <i class="ri-file-list-3-line"></i>
                    <span>Post unlimited job listings</span>
                </div>
                <div class="auth-feature">
                    <i class="ri-robot-line"></i>
                    <span>AI-powered candidate matching</span>
                </div>
            `;
        } else {
            container.className = 'auth-container seeker-mode';
            tagline.textContent = 'Find your dream job with AI-powered matching. Your career journey starts here.';
            features.innerHTML = `
                <div class="auth-feature">
                    <i class="ri-search-line"></i>
                    <span>Thousands of job opportunities</span>
                </div>
                <div class="auth-feature">
                    <i class="ri-file-user-line"></i>
                    <span>Build your professional profile</span>
                </div>
                <div class="auth-feature">
                    <i class="ri-robot-line"></i>
                    <span>AI-powered job recommendations</span>
                </div>
            `;
        }
    });
});

// Handle form submission
document.getElementById('signupForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const messageBox = document.getElementById('messageBox');
    const submitBtn = document.getElementById('submitBtn');
    
    // Show loading state
    messageBox.className = 'message-box loading';
    messageBox.textContent = 'Creating your account...';
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<div class="spinner"></div> Creating...';
    
    const formData = {
        name: document.getElementById('fullName').value,
        email: document.getElementById('email').value,
        password: document.getElementById('password').value,
        phone: document.getElementById('phone').value,
        role: document.querySelector('input[name="role"]:checked').value
    };
    
    try {
        const response = await fetch('/api/auth/signup', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(formData)
        });
        
        const resultText = await response.text();
        let data;
        
        try {
            data = JSON.parse(resultText);
        } catch (jsonError) {
            throw new Error('Server returned non-JSON response');
        }
        
        if (response.ok) {
            messageBox.className = 'message-box success';
            messageBox.textContent = 'âœ“ Account created! Redirecting to login...';
            setTimeout(() => { window.location.href = '/login'; }, 1500);
        } else {
            const errorMsg = data.error || data.message || 'Registration failed';
            
            if (errorMsg.toLowerCase().includes('email already')) {
                messageBox.className = 'message-box error';
                messageBox.innerHTML = 'Email already registered. <a href="/login" style="color:#dc2626;text-decoration:underline;">Login instead?</a>';
            } else {
                messageBox.className = 'message-box error';
                messageBox.textContent = errorMsg;
            }
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="ri-user-add-line"></i> Create Account';
        }
    } catch (err) {
        console.error('Signup error:', err);
        messageBox.className = 'message-box error';
        messageBox.textContent = 'Connection error. Please try again.';
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<i class="ri-user-add-line"></i> Create Account';
    }
});
</script>

