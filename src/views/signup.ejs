<%- include('includes/header', { title: 'Create Account - Job Ecosystem' }) %>

<style>
/* ============================================
   MODERN SIGNUP PAGE STYLES
   ============================================ */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.auth-container {
    min-height: 100vh;
    display: flex;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    position: relative;
    overflow: hidden;
    transition: background 0.5s ease;
}

/* Dynamic background based on role */
.auth-container.employer-mode {
    background: linear-gradient(135deg, #764ba2 0%, #f093fb 50%, #ff758c 100%);
}

.auth-container.seeker-mode {
    background: linear-gradient(135deg, #667eea 0%, #00b074 50%, #00d4aa 100%);
}

/* Animated background shapes */
.auth-container::before,
.auth-container::after {
    content: '';
    position: absolute;
    border-radius: 50%;
    animation: float 20s ease-in-out infinite;
}

.auth-container::before {
    width: 600px;
    height: 600px;
    background: rgba(255, 255, 255, 0.05);
    top: -200px;
    left: -200px;
}

.auth-container::after {
    width: 400px;
    height: 400px;
    background: rgba(255, 255, 255, 0.08);
    bottom: -150px;
    right: -100px;
    animation-delay: -10s;
}

@keyframes float {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -30px) rotate(5deg); }
    66% { transform: translate(-20px, 20px) rotate(-5deg); }
}

/* Left Branding Panel */
.auth-branding {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 3rem;
    position: relative;
    z-index: 1;
}

.auth-branding-content {
    max-width: 400px;
    text-align: center;
    color: white;
}

.auth-logo {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
}

.auth-logo i {
    font-size: 2.5rem;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.75rem;
    border-radius: 16px;
}

.auth-tagline {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 2rem;
    line-height: 1.6;
}

/* Dynamic features based on role */
.auth-features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: left;
}

.auth-feature {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: rgba(255, 255, 255, 0.1);
    padding: 1rem 1.25rem;
    border-radius: 12px;
    backdrop-filter: blur(10px);
}

.auth-feature i {
    font-size: 1.5rem;
    color: #ffd700;
}

.auth-feature span {
    font-size: 0.95rem;
    opacity: 0.95;
}

/* Right Form Panel */
.auth-form-panel {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
    z-index: 1;
}

.auth-card {
    width: 100%;
    max-width: 480px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
}

.auth-card-header {
    text-align: center;
    margin-bottom: 1.5rem;
}

.auth-card-header h1 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1a1a2e;
    margin-bottom: 0.5rem;
}

.auth-card-header p {
    color: #6c757d;
    font-size: 0.95rem;
}

/* Role Selection */
.role-selection {
    margin-bottom: 1.5rem;
}

.role-selection-label {
    display: block;
    color: #495057;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    text-align: center;
}

.role-options {
    display: flex;
    gap: 1rem;
}

.role-option {
    flex: 1;
    position: relative;
}

.role-option input[type="radio"] {
    position: absolute;
    opacity: 0;
    pointer-events: none;
}

.role-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1.25rem 1rem;
    border: 2px solid #e9ecef;
    border-radius: 16px;
    background: #f8f9fa;
    cursor: pointer;
    transition: all 0.3s ease;
}

.role-card:hover {
    border-color: #667eea;
    background: white;
}

.role-card i {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: #6c757d;
    transition: all 0.3s ease;
}

.role-card .role-title {
    font-weight: 600;
    color: #495057;
    margin-bottom: 0.25rem;
    transition: color 0.3s ease;
}

.role-card .role-desc {
    font-size: 0.75rem;
    color: #adb5bd;
    text-align: center;
}

/* Selected states */
.role-option input:checked + .role-card {
    border-color: #667eea;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.2);
}

.role-option input:checked + .role-card i {
    color: #667eea;
}

.role-option input:checked + .role-card .role-title {
    color: #667eea;
}

/* Employer specific */
.role-option input[value="employer"]:checked + .role-card {
    border-color: #764ba2;
    background: linear-gradient(135deg, rgba(118, 75, 162, 0.1) 0%, rgba(240, 147, 251, 0.1) 100%);
    box-shadow: 0 8px 20px rgba(118, 75, 162, 0.2);
}

.role-option input[value="employer"]:checked + .role-card i,
.role-option input[value="employer"]:checked + .role-card .role-title {
    color: #764ba2;
}

/* Social Login */
.social-login-group {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.social-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    background: white;
    color: #333;
    font-size: 0.85rem;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease;
}

.social-btn:hover {
    border-color: #667eea;
    background: #f8f9fa;
    transform: translateY(-2px);
}

.social-btn i {
    font-size: 1.1rem;
}

.social-btn.google i { color: #DB4437; }
.social-btn.facebook i { color: #4267B2; }

/* Divider */
.auth-divider {
    display: flex;
    align-items: center;
    margin: 1.25rem 0;
    gap: 1rem;
}

.auth-divider::before,
.auth-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: #e9ecef;
}

.auth-divider span {
    color: #adb5bd;
    font-size: 0.8rem;
    font-weight: 500;
}

/* Form Inputs */
.form-row {
    display: flex;
    gap: 1rem;
}

.form-group {
    flex: 1;
    margin-bottom: 1rem;
}

.form-group label {
    display: block;
    color: #495057;
    font-size: 0.8rem;
    font-weight: 500;
    margin-bottom: 0.4rem;
}

.input-wrapper {
    position: relative;
}

.input-wrapper i.input-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #adb5bd;
    font-size: 1rem;
    transition: color 0.3s ease;
}

.form-input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 2.5rem;
    border: 2px solid #e9ecef;
    border-radius: 10px;
    font-size: 0.95rem;
    color: #333;
    background: #f8f9fa;
    transition: all 0.3s ease;
}

.form-input:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
}

.form-input:focus + i.input-icon,
.input-wrapper:focus-within i.input-icon {
    color: #667eea;
}

.form-input::placeholder {
    color: #adb5bd;
}

/* Password toggle */
.toggle-password {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #adb5bd;
    cursor: pointer;
    padding: 0.25rem;
    font-size: 1rem;
    transition: color 0.3s ease;
}

.toggle-password:hover {
    color: #667eea;
}

/* Terms checkbox */
.terms-group {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1.25rem;
    font-size: 0.85rem;
    color: #6c757d;
}

.terms-group input[type="checkbox"] {
    width: 18px;
    height: 18px;
    accent-color: #667eea;
    margin-top: 2px;
}

.terms-group a {
    color: #667eea;
    text-decoration: none;
}

.terms-group a:hover {
    text-decoration: underline;
}

/* Submit Button */
.submit-btn {
    width: 100%;
    padding: 0.9rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 12px;
    color: white;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
}

.submit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
}

/* Dynamic button color */
.auth-container.employer-mode .submit-btn {
    background: linear-gradient(135deg, #764ba2 0%, #f093fb 100%);
}

.auth-container.seeker-mode .submit-btn {
    background: linear-gradient(135deg, #667eea 0%, #00b074 100%);
}

/* Message Box */
.message-box {
    padding: 0.75rem;
    border-radius: 10px;
    text-align: center;
    margin-bottom: 1rem;
    font-weight: 500;
    font-size: 0.85rem;
    display: none;
}

.message-box.error {
    background: #fee2e2;
    color: #dc2626;
    border: 1px solid #fecaca;
    display: block;
}

.message-box.success {
    background: #d1fae5;
    color: #059669;
    border: 1px solid #a7f3d0;
    display: block;
}

.message-box.loading {
    background: #e0e7ff;
    color: #4f46e5;
    border: 1px solid #c7d2fe;
    display: block;
}

/* Login Link */
.auth-footer {
    text-align: center;
    margin-top: 1.25rem;
    padding-top: 1.25rem;
    border-top: 1px solid #e9ecef;
    color: #6c757d;
    font-size: 0.9rem;
}

.auth-footer a {
    color: #667eea;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease;
}

.auth-footer a:hover {
    color: #764ba2;
    text-decoration: underline;
}

/* Spinner */
.spinner {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

/* Mobile Responsive */
@media (max-width: 992px) {
    .auth-branding {
        display: none;
    }
    
    .auth-form-panel {
        flex: 1;
    }
    
    .auth-card {
        margin: 1rem;
    }
}

@media (max-width: 480px) {
    .auth-card {
        padding: 1.5rem;
        border-radius: 20px;
    }
    
    .form-row {
        flex-direction: column;
        gap: 0;
    }
    
    .role-options {
        flex-direction: column;
    }
    
    .social-login-group {
        flex-direction: column;
    }
}
</style>

<div class="auth-container seeker-mode" id="authContainer">
    <!-- Left Branding Panel -->
    <div class="auth-branding">
        <div class="auth-branding-content">
            <div class="auth-logo">
                <i class="ri-briefcase-4-fill"></i>
                <span>Job Ecosystem</span>
            </div>
            <p class="auth-tagline" id="brandTagline">
                Find your dream job with AI-powered matching. Your career journey starts here.
            </p>
            <div class="auth-features" id="brandFeatures">
                <div class="auth-feature">
                    <i class="ri-search-line"></i>
                    <span>Thousands of job opportunities</span>
                </div>
                <div class="auth-feature">
                    <i class="ri-file-user-line"></i>
                    <span>Build your professional profile</span>
                </div>
                <div class="auth-feature">
                    <i class="ri-robot-line"></i>
                    <span>AI-powered job recommendations</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Form Panel -->
    <div class="auth-form-panel">
        <div class="auth-card">
            <div class="auth-card-header">
                <h1>Create Account</h1>
                <p>Join thousands of professionals on Job Ecosystem</p>
            </div>

            <!-- Role Selection -->
            <div class="role-selection">
                <span class="role-selection-label">I want to:</span>
                <div class="role-options">
                    <label class="role-option">
                        <input type="radio" name="role" value="job_seeker" checked>
                        <div class="role-card">
                            <i class="ri-user-search-line"></i>
                            <span class="role-title">Find a Job</span>
                            <span class="role-desc">Browse and apply to jobs</span>
                        </div>
                    </label>
                    <label class="role-option">
                        <input type="radio" name="role" value="employer">
                        <div class="role-card">
                            <i class="ri-building-2-line"></i>
                            <span class="role-title">Hire Talent</span>
                            <span class="role-desc">Post jobs and find candidates</span>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Social Login -->
            <div class="social-login-group">
                <a href="/api/auth/google" class="social-btn google">
                    <i class="ri-google-fill"></i>
                    Google
                </a>
                <a href="/api/auth/facebook" class="social-btn facebook">
                    <i class="ri-facebook-fill"></i>
                    Facebook
                </a>
            </div>

            <div class="auth-divider">
                <span>or register with email</span>
            </div>

            <!-- Message Box -->
            <div id="messageBox" class="message-box"></div>

            <!-- Signup Form -->
            <form id="signupForm">
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <div class="input-wrapper">
                        <input 
                            type="text" 
                            id="fullName" 
                            class="form-input" 
                            placeholder="Enter your full name"
                            required
                        >
                        <i class="ri-user-line input-icon"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <div class="input-wrapper">
                        <input 
                            type="email" 
                            id="email" 
                            class="form-input" 
                            placeholder="Enter your email"
                            required
                        >
                        <i class="ri-mail-line input-icon"></i>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="phone">Phone (Optional)</label>
                        <div class="input-wrapper">
                            <input 
                                type="tel" 
                                id="phone" 
                                class="form-input" 
                                placeholder="Your phone"
                            >
                            <i class="ri-phone-line input-icon"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <div class="input-wrapper">
                            <input 
                                type="password" 
                                id="password" 
                                class="form-input" 
                                placeholder="Min 6 characters"
                                minlength="6"
                                required
                            >
                            <i class="ri-lock-line input-icon"></i>
                            <button type="button" class="toggle-password" onclick="togglePassword()">
                                <i class="ri-eye-off-line" id="toggleIcon"></i>
                            </button>
                        </div>
