<%- include('includes/header2', { title: 'Manage Groups' }) %>

<style>
    /* Groups Hero Banner */
    .groups-hero {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border-radius: 16px;
        padding: 1.25rem 1.5rem;
        margin-bottom: 1.5rem;
        margin-top: 0.5rem;
        position: relative;
        overflow: hidden;
    }
    
    .groups-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 300px;
        height: 300px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
    }
    
    .groups-hero h1 {
        color: #fff;
        font-weight: 700;
        font-size: 1.4rem;
        margin-bottom: 0.25rem;
        position: relative;
        z-index: 1;
    }
    
    .groups-hero p {
        color: rgba(255,255,255,0.8);
        margin-bottom: 0;
        font-size: 0.9rem;
        position: relative;
        z-index: 1;
    }
    
    /* Groups Grid */
    .groups-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.25rem;
    }
    
    .group-card {
        background: var(--custom-white);
        border-radius: 16px;
        padding: 1.5rem;
        border: 1px solid rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }
    
    .group-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 40px rgba(240, 147, 251, 0.15);
    }
    
    .group-icon {
        width: 56px;
        height: 56px;
        border-radius: 14px;
        background: linear-gradient(135deg, #f093fb, #f5576c);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #fff;
    }
    
    .group-name {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }
    
    .group-meta {
        display: flex;
        gap: 1rem;
        color: #888;
        font-size: 0.85rem;
        margin-top: 0.75rem;
    }
    
    .group-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(0,0,0,0.05);
    }
    
    .group-actions .btn {
        flex: 1;
        padding: 0.5rem;
        font-size: 0.8rem;
    }
    
    .create-fab {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: #fff;
        border: none;
        font-size: 1.5rem;
        box-shadow: 0 8px 25px rgba(240, 147, 251, 0.4);
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .create-fab:hover {
        transform: scale(1.1);
    }
    
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--custom-white);
        border-radius: 20px;
        border: 2px dashed #e0e0e0;
        grid-column: 1 / -1;
    }
    
    .empty-state i {
        font-size: 4rem;
        color: #ccc;
        margin-bottom: 1rem;
    }
    
    /* Modal Enhancements */
    .modal-content {
        border-radius: 20px;
        border: none;
    }
    
    .modal-header.groups-modal {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: #fff;
        border: none;
        padding: 1.5rem;
        border-radius: 20px 20px 0 0;
    }
    
    .modal-header.groups-modal .btn-close {
        filter: brightness(0) invert(1);
    }
    
    /* Modal body dark mode */
    .modal-body {
        background: var(--custom-white);
    }
    
    /* User selection list */
    #user-selection-list {
        background: rgba(240, 147, 251, 0.08);
        border-color: rgba(240, 147, 251, 0.2) !important;
    }
    
    #user-selection-list .form-check-label {
        color: var(--default-text-color);
    }
</style>

<!-- APP-CONTENT START -->
<div class="main-content app-content">
        <%- include(sidebar) %>

    <div class="container-fluid">

        <!-- Hero Banner -->
        <div class="groups-hero">
            <h1><i class="ri-group-line me-2"></i>Manage Groups</h1>
            <p>Create and manage chat groups for collaboration</p>
        </div>

        <!-- Groups Grid -->
        <div class="groups-grid" id="groups-grid">
            <div class="text-center py-5" style="grid-column: 1/-1;">Loading groups...</div>
        </div>

    </div>
</div>

<!-- Floating Create Button -->
<button class="create-fab" data-bs-toggle="modal" data-bs-target="#createGroupModal" title="Create Group">
    <i class="ri-add-line"></i>
</button>
<!-- APP-CONTENT END -->

<!-- Create Group Modal -->
<div class="modal fade" id="createGroupModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header groups-modal">
                <h6 class="modal-title"><i class="ri-add-line me-2"></i>Create New Group</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="group-name" class="form-label">Group Name</label>
                    <input type="text" class="form-control" id="group-name" placeholder="E.g. Project Alpha Team">
                </div>
                <div class="mb-3">
                     <label class="form-label">Invite Members (Optional)</label>
                     <div class="border rounded p-2" id="user-selection-list" style="max-height: 150px; overflow-y: auto;">
                        <!-- Checkboxes populated via JS -->
                     </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btn-create-group" onclick="createGroup()">Create Group</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Group Modal -->
<div class="modal fade" id="editGroupModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header groups-modal">
                <h6 class="modal-title"><i class="ri-edit-line me-2"></i>Edit Group</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="edit-group-id">
                <div class="mb-3">
                    <label for="edit-group-name" class="form-label">Group Name</label>
                    <input type="text" class="form-control" id="edit-group-name">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btn-edit-group" onclick="updateGroup()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<%- include('includes/footer') %>
<script src="/build/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>


<script>
    let allContacts = [];

    document.addEventListener('DOMContentLoaded', async () => {
        await Promise.all([loadContacts(), loadGroups()]);
    });

    async function loadContacts() {
        try {
            const token = localStorage.getItem('token');
            const res = await fetch('/api/chat/contacts', {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            const data = await res.json();
            if (data.success) {
                allContacts = data.contacts || [];
                renderUserSelection();
            }
        } catch (e) { console.error(e); }
    }

    function renderUserSelection() {
        const container = document.getElementById('user-selection-list');
        if (!container) return;
        container.innerHTML = allContacts.map(u => `
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="${u.id}" id="user-${u.id}">
                <label class="form-check-label" for="user-${u.id}">
                    ${u.full_name}
                </label>
            </div>
        `).join('');
    }


    async function loadGroups() {
        const token = localStorage.getItem('token');
        const grid = document.getElementById('groups-grid');
        
        try {
            const res = await fetch('/api/chat/groups', {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            const data = await res.json();
            
            if (data.success && data.groups.length > 0) {
                grid.innerHTML = data.groups.map(g => {
                    const isOwner = g.created_by === data.currentUserId;
                    const safeName = g.name.replace(/'/g, "&#39;");
                    
                    return `
                    <div class="group-card">
                        <div class="d-flex align-items-start">
                            <div class="group-icon">
                                <i class="ri-group-line"></i>
                            </div>
                            <div class="ms-3 flex-fill">
                                <div class="group-name">${g.name}</div>
                                <span class="badge ${isOwner ? 'bg-primary-transparent text-primary' : 'bg-light text-muted'}">${isOwner ? 'Owner' : 'Member'}</span>
                            </div>
                        </div>
                        <div class="group-meta">
                            <span><i class="ri-user-line me-1"></i>${g.members ? g.members.length : 0} members</span>
                            <span><i class="ri-calendar-line me-1"></i>${new Date(g.createdAt).toLocaleDateString()}</span>
                        </div>
                        <div class="group-actions">
                            <a href="/dashboard/chat" class="btn btn-outline-primary">
                                <i class="ri-chat-1-line me-1"></i>Chat
                            </a>
                            ${isOwner ? `
                            <button onclick="openEditModal('${g.id}', '${safeName}')" class="btn btn-outline-secondary">
                                <i class="ri-edit-line me-1"></i>Edit
                            </button>
                            <button onclick="deleteGroup('${g.id}')" class="btn btn-outline-danger">
                                <i class="ri-delete-bin-line"></i>
                            </button>
                            ` : ''}
                        </div>
                    </div>
                `}).join('');
            } else {
                grid.innerHTML = `
                    <div class="empty-state">
                        <i class="ri-group-line"></i>
                        <h4>No Groups Yet</h4>
                        <p class="text-muted">Create your first group to start collaborating</p>
                        <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#createGroupModal">
                            <i class="ri-add-line me-1"></i> Create Group
                        </button>
                    </div>
                `;
            }
        } catch (e) {
            console.error(e);
            grid.innerHTML = '<div class="alert alert-danger" style="grid-column:1/-1;">Error loading groups</div>';
        }
    }

    async function createGroup() {
        const name = document.getElementById('group-name').value.trim();
        if (!name) return alert('Please enter a group name');

        // Get selected members
        const checkboxes = document.querySelectorAll('#user-selection-list input:checked');
        const memberIds = Array.from(checkboxes).map(cb => cb.value);

        const btn = document.getElementById('btn-create-group');
        const originalText = btn.innerHTML;
        
        try {
            // Show Spinner
            btn.disabled = true;
            btn.innerHTML = `<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> Creating...`;

            const token = localStorage.getItem('token');
            const res = await fetch('/api/chat/groups', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
                body: JSON.stringify({ name, members: memberIds })
            });
            const data = await res.json();
            
            if (data.success) {
                const modal = bootstrap.Modal.getInstance(document.getElementById('createGroupModal'));
                modal.hide();
                document.getElementById('group-name').value = '';
                document.querySelectorAll('#user-selection-list input:checked').forEach(cb => cb.checked = false);
                loadGroups();
                // Optional: Toastify logic
                if(typeof Toastify !== 'undefined') Toastify({ text: "Group created!", backgroundColor: "#28a745" }).showToast();
            } else {
                alert(data.message || 'Failed to create group');
            }
        } catch (e) { 
            console.error(e);
            alert('An error occurred while creating the group.');
        } finally {
            // Restore Button
            btn.disabled = false;
            btn.innerHTML = originalText;
        }
    }

    function openEditModal(id, name) {
        document.getElementById('edit-group-id').value = id;
        document.getElementById('edit-group-name').value = name;
        new bootstrap.Modal(document.getElementById('editGroupModal')).show();
    }

    async function updateGroup() {
        const id = document.getElementById('edit-group-id').value;
        const name = document.getElementById('edit-group-name').value.trim();
        if (!name) return alert('Name cannot be empty');

        const btn = document.getElementById('btn-edit-group');
        const originalText = btn.innerHTML;

        try {
            // Show Spinner
            btn.disabled = true;
            btn.innerHTML = `<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> Saving...`;

            const token = localStorage.getItem('token');
            const res = await fetch(`/api/chat/groups/${id}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
                body: JSON.stringify({ name })
            });

            if (res.ok) {
                const modal = bootstrap.Modal.getInstance(document.getElementById('editGroupModal'));
                modal.hide();
                loadGroups();
                if(typeof Toastify !== 'undefined') Toastify({ text: "Group updated!", backgroundColor: "#28a745" }).showToast();
            } else {
                const data = await res.json();
                alert(data.message || 'Failed to update group');
            }
        } catch (e) { 
            console.error(e);
            alert('An unexpected error occurred');
        } finally {
            // Restore Button
            btn.disabled = false;
            btn.innerHTML = originalText;
        }
    }

    async function deleteGroup(id) {
        if (!confirm('Are you sure you want to delete this group? This action cannot be undone.')) return;
        
        const token = localStorage.getItem('token');
        try {
            const res = await fetch(`/api/chat/groups/${id}`, {
                method: 'DELETE',
                headers: { 'Authorization': `Bearer ${token}` }
            });
            
            if (res.ok) {
                loadGroups();
                if(typeof Toastify !== 'undefined') Toastify({ text: "Group deleted.", backgroundColor: "#28a745" }).showToast();
            } else {
                const data = await res.json();
                alert(data.message || 'Could not delete group (Are you the owner?)');
            }
        } catch (e) { console.error(e); }
    }
</script>
