<script>
let currentPage = 1;
let currentUserId = null;

document.addEventListener('DOMContentLoaded', function() {
    loadStats();
    loadActivities();
    
    // Debounced search
    let searchTimeout;
    document.getElementById('search-input').addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => loadActivities(), 500);
    });
});

async function loadStats() {
    const token = localStorage.getItem('token');
    try {
        const res = await fetch('/api/admin/activities/stats', {
            headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await res.json();
        
        if (data.success) {
            const s = data.stats;
            document.getElementById('stat-signups-today').textContent = s.signups.today;
            document.getElementById('stat-signups-week').textContent = s.signups.week;
            document.getElementById('stat-logins-today').textContent = s.logins.today;
            document.getElementById('stat-logins-week').textContent = s.logins.week;
            document.getElementById('stat-active-today').textContent = s.activeUsersToday;
            document.getElementById('stat-online-now').textContent = s.onlineNow;
        }
    } catch (e) {
        console.error('Stats error:', e);
    }
}

async function loadActivities(page = 1) {
    const token = localStorage.getItem('token');
    currentPage = page;
    
    const params = new URLSearchParams({
        page,
        limit: 25,
        event_type: document.getElementById('event-type-filter').value,
        search: document.getElementById('search-input').value,
        start_date: document.getElementById('start-date').value,
        end_date: document.getElementById('end-date').value
    });
    
    try {
        const res = await fetch(`/api/admin/activities?${params}`, {
            headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await res.json();
        
        if (data.success) {
            renderActivities(data.activities);
            renderPagination(data.pagination);
        }
    } catch (e) {
        console.error('Activities error:', e);
        document.getElementById('activity-table-body').innerHTML = 
            '<tr><td colspan="7" class="text-center py-4 text-danger">Error loading activities</td></tr>';
    }
}

function renderActivities(activities) {
    const tbody = document.getElementById('activity-table-body');
    
    if (activities.length === 0) {
        tbody.innerHTML = '<tr><td colspan="7" class="text-center py-4 text-muted">No activities found</td></tr>';
        return;
    }
    
    tbody.innerHTML = activities.map(activity => {
        const user = activity.user;
        const eventDate = new Date(activity.createdAt);
        const timeAgo = getTimeAgo(eventDate);
        
        return `
            <tr onclick="viewUserDetails('${user.id}')">
                <td>
                    <div class="d-flex align-items-center">
                        <img src="${user.profile_picture_url || '/build/assets/images/faces/1.jpg'}" 
                             class="user-avatar me-2" alt="">
                        <div>
                            <div class="fw-medium">${user.full_name}</div>
                            <small class="text-muted">${user.email}</small>
                        </div>
                    </div>
                </td>
                <td><span class="role-badge ${user.role}">${user.role.replace('_', ' ')}</span></td>
                <td><span class="event-badge ${activity.event_type}">${activity.event_type}</span></td>
                <td>
                    <div class="device-info">
                        <div><i class="ri-device-line"></i>${activity.device_type || 'Unknown'}</div>
                        <div><i class="ri-global-line"></i>${activity.browser || 'Unknown'} / ${activity.os || 'Unknown'}</div>
                    </div>
                </td>
                <td><small class="text-muted">${activity.ip_address || '-'}</small></td>
                <td>
                    <div><small>${eventDate.toLocaleDateString()}</small></div>
                    <div><small class="text-muted">${eventDate.toLocaleTimeString()}</small></div>
                </td>
                <td>
                    <button class="btn btn-sm btn-outline-primary" onclick="event.stopPropagation(); viewUserDetails('${user.id}')">
                        <i class="ri-eye-line"></i>
                    </button>
                </td>
            </tr>
        `;
    }).join('');
}

function renderPagination(pagination) {
    document.getElementById('showing-count').textContent = 
        Math.min(pagination.page * 25, pagination.total);
    document.getElementById('total-count').textContent = pagination.total;
    
    const controls = document.getElementById('pagination-controls');
    let html = '';
    
    if (pagination.page > 1) {
        html += `<li class="page-item"><a class="page-link" href="#" onclick="loadActivities(${pagination.page - 1})">Prev</a></li>`;
    }
    
    for (let i = 1; i <= Math.min(pagination.pages, 5); i++) {
        html += `<li class="page-item ${i === pagination.page ? 'active' : ''}">
            <a class="page-link" href="#" onclick="loadActivities(${i})">${i}</a>
        </li>`;
    }
    
    if (pagination.page < pagination.pages) {
        html += `<li class="page-item"><a class="page-link" href="#" onclick="loadActivities(${pagination.page + 1})">Next</a></li>`;
    }
    
    controls.innerHTML = html;
}

async function viewUserDetails(userId) {
    currentUserId = userId;
    const token = localStorage.getItem('token');
    
    try {
        const res = await fetch(`/api/admin/activities/user/${userId}`, {
            headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await res.json();
        
        if (data.success) {
            const user = data.user;
            
            // Populate modal
            document.getElementById('modal-user-avatar').src = 
                user.profile_picture_url || '/build/assets/images/faces/1.jpg';
            document.getElementById('modal-user-name').textContent = user.full_name;
            document.getElementById('modal-user-email').textContent = user.email;
            document.getElementById('modal-user-id').textContent = user.id.slice(0, 8) + '...';
            document.getElementById('modal-user-role').innerHTML = 
                `<span class="role-badge ${user.role}">${user.role.replace('_', ' ')}</span>`;
            document.getElementById('modal-user-status').innerHTML = 
                `<span class="status-badge ${user.account_status}">${user.account_status}</span>`;
            document.getElementById('modal-user-phone').textContent = user.phone_number || 'Not provided';
            document.getElementById('modal-user-created').textContent = 
                new Date(user.createdAt).toLocaleDateString();
            document.getElementById('modal-user-last-active').textContent = 
                user.last_active_at ? getTimeAgo(new Date(user.last_active_at)) : 'Never';
            document.getElementById('modal-user-online').innerHTML = 
                user.is_online 
                    ? '<span class="online-indicator online"></span>Online' 
                    : '<span class="online-indicator offline"></span>Offline';
            
            // Render activity timeline
            const timeline = document.getElementById('modal-activity-timeline');
            timeline.innerHTML = data.activities.slice(0, 20).map(activity => `
                <div class="timeline-item">
                    <div class="timeline-icon ${activity.event_type}">
                        <i class="ri-${activity.event_type === 'signup' ? 'user-add' : 'login-box'}-line"></i>
                    </div>
                    <div>
                        <div class="fw-medium">${activity.event_type}</div>
                        <small class="text-muted">
                            ${new Date(activity.createdAt).toLocaleString()} 
                            · ${activity.device_type || 'Unknown'} · ${activity.browser || 'Unknown'}
                        </small>
                    </div>
                </div>
            `).join('') || '<p class="text-muted text-center py-3">No activity recorded</p>';
            
            // Show/hide action buttons based on status
            document.getElementById('btn-suspend-user').style.display = 
                user.account_status === 'active' ? 'inline-block' : 'none';
            document.getElementById('btn-activate-user').style.display = 
                user.account_status !== 'active' ? 'inline-block' : 'none';
            
            new bootstrap.Modal(document.getElementById('userDetailModal')).show();
        }
    } catch (e) {
        console.error('User details error:', e);
    }
}

document.getElementById('btn-suspend-user').addEventListener('click', async function() {
    if (!currentUserId) return;
    await updateUserStatus('suspended');
});

document.getElementById('btn-activate-user').addEventListener('click', async function() {
    if (!currentUserId) return;
    await updateUserStatus('active');
});

async function updateUserStatus(status) {
    const token = localStorage.getItem('token');
    
    try {
        const res = await fetch(`/api/admin/users/${currentUserId}`, {
            method: 'PATCH',
            headers: { 
                'Authorization': `Bearer ${token}`,
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ account_status: status })
        });
        
        const data = await res.json();
        if (data.success) {
            bootstrap.Modal.getInstance(document.getElementById('userDetailModal')).hide();
            loadActivities(currentPage);
            alert(`User ${status === 'active' ? 'activated' : 'suspended'} successfully`);
        }
    } catch (e) {
        console.error('Update status error:', e);
    }
}

function getTimeAgo(date) {
    const seconds = Math.floor((new Date() - date) / 1000);
    
    let interval = seconds / 31536000;
    if (interval > 1) return Math.floor(interval) + ' years ago';
    
    interval = seconds / 2592000;
    if (interval > 1) return Math.floor(interval) + ' months ago';
    
    interval = seconds / 86400;
    if (interval > 1) return Math.floor(interval) + ' days ago';
    
    interval = seconds / 3600;
    if (interval > 1) return Math.floor(interval) + ' hours ago';
    
    interval = seconds / 60;
    if (interval > 1) return Math.floor(interval) + ' minutes ago';
    
    return 'Just now';
}
