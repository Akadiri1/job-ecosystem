<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

<script>
    // Store skills and languages as arrays
    let skillsArray = [];
    let languagesArray = [];

    // 1. AUTH CHECK & INITIALIZE TAG INPUTS
    document.addEventListener("DOMContentLoaded", function() {
        const token = localStorage.getItem('token');
        if (!token) {
            window.location.href = '/login';
        } else {
            document.getElementById('mainPage').style.display = 'block';
        }

        // Initialize Skills tag input
        const skillsInput = document.getElementById('skills-input');
        if (skillsInput) {
            skillsInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const value = this.value.trim();
                    if (value && !skillsArray.includes(value)) {
                        skillsArray.push(value);
                        renderTags('skills');
                        this.value = '';
                    }
                }
            });
        }

        // Initialize Languages tag input
        const languageInput = document.getElementById('language-input');
        if (languageInput) {
            languageInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const value = this.value.trim();
                    if (value && !languagesArray.includes(value)) {
                        languagesArray.push(value);
                        renderTags('language');
                        this.value = '';
                    }
                }
            });
        }

        // Load company details
        loadCompanyDetails();
    });

    // Load company details from API
    async function loadCompanyDetails() {
        const token = localStorage.getItem('token');
        try {
            const response = await fetch('/api/company/me', {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            if (response.ok) {
                const { company } = await response.json();
                document.getElementById('company-name').value = company.name || 'Not set';
                document.getElementById('company-website').value = company.website || 'Not set';
                document.getElementById('company-industry').value = company.industry || 'Not set';
                document.getElementById('company-location').value = company.location || 'Not set';
                if (company.logo_url) {
                    document.getElementById('company-logo').src = company.logo_url;
                }
            }
        } catch (error) {
            console.log('Could not load company details');
        }
    }

    // Render tags in the list container
    function renderTags(type) {
        const array = type === 'skills' ? skillsArray : languagesArray;
        const container = document.getElementById(`${type}-list`);
        const hiddenInput = document.getElementById(type);
        
        container.innerHTML = '';
        array.forEach((item, index) => {
            const tag = document.createElement('span');
            tag.className = 'badge bg-primary-transparent d-flex align-items-center gap-1';
            tag.style.cssText = 'padding: 6px 10px; font-size: 13px;';
            tag.innerHTML = `
                ${item}
                <button type="button" class="btn-close btn-close-sm ms-1" style="font-size: 8px;" onclick="removeTag('${type}', ${index})"></button>
            `;
            container.appendChild(tag);
        });
        
        // Update hidden input with comma-separated values
        hiddenInput.value = array.join(',');
    }

    // Remove a tag
    function removeTag(type, index) {
        if (type === 'skills') {
            skillsArray.splice(index, 1);
        } else {
            languagesArray.splice(index, 1);
        }
        renderTags(type);
    }

    // 2. HELPER: SHOW TOAST FUNCTION
    function showToast(message, type = 'success') {
        let bg = type === 'success' ? "linear-gradient(to right, #00b09b, #96c93d)" : "linear-gradient(to right, #ff5f6d, #ffc371)";
        
        if (type === 'warning') {
            bg = "linear-gradient(to right, #f8b500, #fceabb)";
        }

        Toastify({
            text: message,
            duration: 3000,
            close: true,
            gravity: "top", 
            position: "right", 
            stopOnFocus: true, 
            style: {
                background: bg,
                borderRadius: "10px",
                boxShadow: "0 4px 15px rgba(0,0,0,0.1)",
                fontWeight: "500"
            },
        }).showToast();
    }

    // 3. POST JOB FUNCTION
    async function postJob() {
        const btn = document.getElementById('postJobBtn');
        const originalText = btn.innerHTML;
        btn.innerHTML = `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Posting...`;
        btn.disabled = true;

        const token = localStorage.getItem('token');
        
        // Gather Form Data from clean inputs
        const formData = {
            title: document.getElementById('job-title').value.trim(),
            description: document.getElementById('job-description').value.trim(),
            type: document.getElementById('job-type').value,
            location_type: document.getElementById('location-type').value,
            salary_range: document.getElementById('salary-range').value.trim(),
            currency: document.getElementById('currency').value,
            category: document.getElementById('job-category').value,
            experience: document.getElementById('experience').value,
            status: 'active',
            vacancies: parseInt(document.getElementById('vacancies').value) || 1,
            skills: skillsArray, // Send as JSON array
            deadline: document.getElementById('job-deadline').value || null,
            qualification: document.getElementById('qualification').value,
            gender: document.getElementById('gender').value,
            languages: languagesArray // Send as JSON array
        };

        // Validation
        if (!formData.title) {
            showToast("‚ùå Job Title is required", "error");
            btn.innerHTML = originalText;
            btn.disabled = false;
            return;
        }

        if (!formData.description) {
            showToast("‚ùå Job Description is required", "error");
            btn.innerHTML = originalText;
            btn.disabled = false;
            return;
        }

        try {
            const response = await fetch('/api/jobs', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify(formData)
            });

            const data = await response.json();

            if (response.ok) {
                showToast("üéâ Job Posted Successfully! Redirecting...", "success");
                
                setTimeout(() => {
                    window.location.href = '/jobs/manage';
                }, 2000);

            } else {
                if(data.error && data.error.includes("Company Profile")) {
                    showToast("‚ö†Ô∏è Company Profile Required. Redirecting...", "warning");
                    setTimeout(() => { window.location.href = '/company/create'; }, 2500);
                } else {
                    showToast("‚ùå " + (data.error || "Unknown error occurred"), "error");
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            }
        } catch (error) {
            console.error("Network Error:", error);
            showToast("‚ùå Network Error. Check connection.", "error");
            btn.innerHTML = originalText;
            btn.disabled = false;
        }
    }
</script>

