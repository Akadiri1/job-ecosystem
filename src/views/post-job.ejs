    }
    
    .input-group-modern {
        background: var(--custom-white);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 10px;
        overflow: hidden;
    }
    
    .input-group-modern .form-control,
    .input-group-modern .form-select {
        border: none;
        border-radius: 0;
    }
    
    .input-group-modern .form-select {
        border-right: 1px solid rgba(255,255,255,0.1);
    }
</style>

