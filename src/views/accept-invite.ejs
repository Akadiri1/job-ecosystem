<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join the Team - Job Ecosystem</title>
    <!-- Favicon -->
    <link rel="icon" href="/build/assets/images/brand-logos/favicon.ico" type="image/x-icon">
    <!-- Bootstrap CSS -->
    <link id="style" href="/build/assets/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Icons Css -->
    <link href="/build/assets/css/icons.css" rel="stylesheet">
    <!-- Style Css -->
    <link href="/build/assets/css/styles.css" rel="stylesheet">
    <!-- Toastify -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>
<body class="bg-light">

    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-xl-4 col-lg-6 col-md-8">
                <div class="card custom-card">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <a href="/" class="auth-logo">
                                <img src="/build/assets/images/brand-logos/desktop-logo.png" alt="logo" class="desktop-logo ml-auto mr-auto" style="height: 40px;">
                            </a>
                            <h4 class="fw-bold mt-4">Welcome to the Team!</h4>
                            <p class="text-muted">Set your password to accept the invitation.</p>
                        </div>
                        
                        <div id="loading" class="text-center">
                            <div class="spinner-border text-primary" role="status"></div>
                            <p class="mt-2">Verifying invitation...</p>
                        </div>

                        <div id="accept-form" style="display: none;">
                            <div class="mb-3">
                                <label for="full_name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="full_name" readonly disabled>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" readonly disabled>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Create Password</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="password" placeholder="Min 6 characters">
                                    <button class="btn btn-light" type="button" onclick="togglePassword()"><i class="ri-eye-line align-middle"></i></button>
                                </div>
                            </div>
                            <div class="d-grid mt-4">
                                <button onclick="acceptInvite()" class="btn btn-primary">Join Workspace</button>
                            </div>
                        </div>

                        <div id="error-message" class="text-center text-danger mt-3" style="display: none;">
                            <p id="error-text"></p>
                            <a href="/login" class="btn btn-link">Go to Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="/build/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <script>
        // Get Token from URL
        const urlParams = new URLSearchParams(window.location.search);
        const token = urlParams.get('token');
        let inviteData = null;

        // On Load: Verify Token? 
        // We actually can't verify easily without an API call if we want to show their name/email first.
        // Let's assume for now we just show the form and validate on submit, 
        // OR we can make a GET /api/team/verify-invite request.
        // For speed, I'll implement a simple verify via the same accept endpoint if passing only token? 
        // No, let's just let them set password. If token is invalid, it will fail on submit.
        
        // Wait, showing their name is nice. 
        // Let's just switch to "Enter Password".
        
        if (!token) {
            showError("Invalid or missing invitation link.");
        } else {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('accept-form').style.display = 'block';
            
            // Optional: We could hide Name/Email fields or enable them if we want them to correct it.
            // For now, let's hide the readonly inputs since we don't have the data yet.
            document.getElementById('full_name').parentElement.style.display = 'none';
            document.getElementById('email').parentElement.style.display = 'none';
        }

        function showError(msg) {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('accept-form').style.display = 'none';
            document.getElementById('error-message').style.display = 'block';
            document.getElementById('error-text').innerText = msg;
        }

        function togglePassword() {
            const input = document.getElementById('password');
            input.type = input.type === "password" ? "text" : "password";
        }

        async function acceptInvite() {
            const password = document.getElementById('password').value;
            
            if (password.length < 6) {
                Toastify({ text: "Password must be at least 6 characters.", backgroundColor: "#ff5b5c" }).showToast();
                return;
            }

            try {
                const response = await fetch('/api/team/accept', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ token, password })
                });

                const data = await response.json();

                if (response.ok) {
                    // Success! Login logic?
                    Toastify({ text: "Account Setup Complete! Redirecting...", backgroundColor: "#00b074" }).showToast();
                    
                    // Store token if returned (auto-login)
                    if(data.token) {
                         localStorage.setItem('token', data.token);
                         localStorage.setItem('user', JSON.stringify(data.user));
                         setTimeout(() => window.location.href = '/dashboard', 1500);
                    } else {
                        setTimeout(() => window.location.href = '/login', 1500);
                    }
                } else {
                    Toastify({ text: data.error || "Failed to accept invite.", backgroundColor: "#ff5b5c" }).showToast();
                }
            } catch (error) {
                console.error(error);
                Toastify({ text: "Something went wrong.", backgroundColor: "#ff5b5c" }).showToast();
            }
        }
    </script>
</body>
</html>
