<script>
    let allMembers = [];
    let currentEditId = null;
    let currentEditMember = null;

    document.addEventListener("DOMContentLoaded", function() {
        fetchTeam();
    });

    async function fetchTeam() {
        const token = localStorage.getItem('token');
        try {
            const response = await fetch('/api/team/members', {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            const data = await response.json();
            
            const grid = document.getElementById('team-grid');
            
            if (response.ok) {
                allMembers = data.members || [];
                
                // Update Stats
                const activeCount = allMembers.filter(m => m.status === 'active').length;
                const adminCount = allMembers.filter(m => m.role === 'admin' || m.role === 'owner').length;
                document.getElementById('stat-total').textContent = allMembers.length;
                document.getElementById('stat-active').textContent = activeCount;
                document.getElementById('stat-admins').textContent = adminCount;
                
                if (allMembers.length === 0) {
                    grid.innerHTML = `
                        <div class="empty-state" style="grid-column: 1/-1;">
                            <i class="ri-group-line"></i>
                            <h4>No Team Members Yet</h4>
                            <p>Click the + button to invite your first team member</p>
                        </div>
                    `;
                    return;
                }

                grid.innerHTML = allMembers.map(emp => {
                    const user = emp.user || {};
                    const isSuspended = emp.status === 'suspended';
                    const statusClass = isSuspended ? 'suspended' : (emp.status === 'invited' ? 'invited' : 'active');
                    const statusLabel = isSuspended ? 'Suspended' : (emp.status === 'invited' ? 'Pending' : 'Active');
                    
                    return `
                    <div class="member-card ${isSuspended ? 'suspended' : ''}">
                        <div class="d-flex align-items-start">
                            <img src="${user.profile_picture_url || '/assets/images/faces/9.jpg'}" alt="avatar" class="member-avatar">
                            <div class="member-info ms-3 flex-fill">
                                <h5>${user.full_name || 'Unknown'}</h5>
                                <p>${user.email || ''}</p>
                                <div class="mt-2 d-flex align-items-center gap-2 flex-wrap">
                                    <span class="role-badge ${emp.role}">${emp.role}</span>
                                    <span class="d-flex align-items-center">
                                        <span class="status-indicator ${statusClass}"></span>
                                        <small class="text-muted">${statusLabel}</small>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="member-actions">
                            <button onclick="openPermissionsModal('${emp.id}')" class="btn btn-sm btn-outline-primary">
                                <i class="ri-shield-user-line me-1"></i>Permissions
                            </button>
                            <button onclick="toggleStatus('${emp.id}', '${isSuspended ? 'active' : 'suspend'}')" 
                                class="btn btn-sm ${isSuspended ? 'btn-outline-success' : 'btn-outline-warning'}">
                                <i class="ri-${isSuspended ? 'play-circle-line' : 'pause-circle-line'} me-1"></i>
                                ${isSuspended ? 'Activate' : 'Suspend'}
                            </button>
                            <button onclick="deleteMember('${emp.id}')" class="btn btn-sm btn-outline-danger">
                                <i class="ri-delete-bin-line"></i>
                            </button>
                        </div>
                    </div>
                `}).join('');

            } else {
                const errorMsg = data.message || data.error || 'Unknown error';
                const needsCompany = data.needs_company;
                
                grid.innerHTML = `
                    <div class="alert alert-${needsCompany ? 'warning' : 'danger'}" style="grid-column:1/-1;">
                        <strong>${needsCompany ? '‚ö†Ô∏è Setup Required' : '‚ùå Error'}</strong><br>
                        ${errorMsg}
                        ${needsCompany ? '<br><br><a href="/dashboard/employer/company/settings" class="btn btn-primary btn-sm mt-2">Create Company Now</a>' : ''}
                    </div>
                `;
            }
        } catch (error) {
            console.error(error);
            document.getElementById('team-grid').innerHTML = `<div class="alert alert-danger" style="grid-column:1/-1;">Network error. Please refresh the page.</div>`;
        }
    }

    async function sendInvite() {
        const email = document.getElementById('invite-email').value;
        const name = document.getElementById('invite-name').value;
        const role = document.getElementById('invite-role').value;
        
        // Collect permissions
        const permissions = [];
        document.querySelectorAll('.perm-checkbox:checked').forEach(cb => permissions.push(cb.value));
        
        if(!email || !name) {
            Toastify({ text: "Please fill all fields", backgroundColor: "#ff5b5c" }).showToast();
            return;
        }

        const btn = document.getElementById('btn-invite');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Sending...';
        btn.disabled = true;

        const token = localStorage.getItem('token');
        try {
            const response = await fetch('/api/team/invite', {
                method: 'POST',
                headers: { 
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}` 
                },
                body: JSON.stringify({ email, name, role, permissions })
            });
            
            const data = await response.json();
            btn.innerHTML = originalText;
            btn.disabled = false;

            if (response.ok) {
                // Only show the debug link modal if email failed to send
                if(data.debug_link && !data.email_sent) {
                    const modalBody = document.querySelector('#inviteMemberModal .modal-body');
                    const modalFooter = document.querySelector('#inviteMemberModal .modal-footer');
                    
                    modalBody.innerHTML = `
                        <div class="text-center py-4">
                            <div style="width:80px;height:80px;background:linear-gradient(135deg,#ff9f43,#ff6b6b);border-radius:50%;display:flex;align-items:center;justify-content:center;margin:0 auto 1.5rem;">
                                <i class="ri-mail-close-line text-white" style="font-size:2.5rem;"></i>
                            </div>
                            <h5 class="fw-bold mb-2">Email Could Not Be Sent ‚ö†Ô∏è</h5>
                            <p class="text-muted mb-4">The invitation email failed to send. Please share this link manually with the invitee:</p>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" value="${data.debug_link}" id="generatedLink" readonly>
                                <button class="btn btn-primary" type="button" onclick="copyLink()">
                                    <i class="ri-file-copy-line"></i>
                                </button>
                            </div>
                            <small class="text-muted">üí° Tip: Check your email configuration in .env file</small>
                        </div>
                    `;
                    modalFooter.innerHTML = `<button type="button" class="btn btn-primary w-100" onclick="window.location.reload()">Done</button>`;
                } else {
                    // Email sent successfully - just show success toast
                    Toastify({ text: "Invitation sent to " + email + "! üìß", backgroundColor: "#00b074", duration: 5000 }).showToast();
                    bootstrap.Modal.getInstance(document.getElementById('inviteMemberModal')).hide();
                    fetchTeam();
                }
            } else {
                Toastify({ text: data.error || data.message || "Failed to invite", backgroundColor: "#ff5b5c" }).showToast();
            }
        } catch (e) {
            console.error(e);
            Toastify({ text: "Error sending invite", backgroundColor: "#ff5b5c" }).showToast();
            btn.innerHTML = originalText;
            btn.disabled = false;
        }
    }

    function copyLink() {
        const copyText = document.getElementById("generatedLink");
        copyText.select();
        navigator.clipboard.writeText(copyText.value);
        Toastify({ text: "Link Copied!", backgroundColor: "#00b074" }).showToast();
    }

    async function deleteMember(id) {
        if(!confirm("Are you sure you want to remove this member? They will lose access to the workspace.")) return;

        const token = localStorage.getItem('token');
        try {
            const response = await fetch(`/api/team/members/${id}`, {
                method: 'DELETE',
                headers: { 'Authorization': `Bearer ${token}` }
            });
            
            if (response.ok) {
                Toastify({ text: "Member Removed", backgroundColor: "#00b074" }).showToast();
                fetchTeam();
            } else {
                const data = await response.json();
                Toastify({ text: data.error || "Failed to remove", backgroundColor: "#ff5b5c" }).showToast();
            }
        } catch (e) {
            console.error(e);
        }
    }

    async function toggleStatus(id, action) {
        const confirmMsg = action === 'suspend' 
            ? "Suspend this member? They will lose access immediately." 
            : "Re-activate this member?";
            
        if(!confirm(confirmMsg)) return;

        const token = localStorage.getItem('token');
        try {
            console.log('[Suspend Debug] Sending request:', { id, action });
            
            const response = await fetch(`/api/team/members/${id}/status`, {
                method: 'PATCH',
                headers: { 
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}` 
                },
                body: JSON.stringify({ status: action })
            });
            
            const data = await response.json();
            console.log('[Suspend Debug] Response:', { ok: response.ok, status: response.status, data });
            
            if (response.ok) {
                Toastify({ 
                    text: `Member ${action === 'suspend' ? 'Suspended' : 'Activated'}`, 
                    backgroundColor: action === 'suspend' ? "#ff9f43" : "#00b074" 
                }).showToast();
                fetchTeam();
            } else {
                // Show error message
                Toastify({ 
                    text: data.error || data.message || 'Failed to update status', 
                    backgroundColor: "#ff5b5c" 
                }).showToast();
            }
        } catch (e) {
            console.error('[Suspend Debug] Error:', e);
            Toastify({ text: 'Network error', backgroundColor: "#ff5b5c" }).showToast();
        }
    }
    
    function openPermissionsModal(id) {
        currentEditId = id;
        currentEditMember = allMembers.find(m => m.id === id);
        
        if (!currentEditMember) return;
        
        const user = currentEditMember.user || {};
        document.getElementById('edit-member-avatar').src = user.profile_picture_url || '/assets/images/faces/9.jpg';
        document.getElementById('edit-member-name').textContent = user.full_name || 'Unknown';
        document.getElementById('edit-member-email').textContent = user.email || '';
        document.getElementById('perm-role').value = currentEditMember.role || 'member';
        
        // Set permission checkboxes
        const perms = currentEditMember.permissions || [];
        document.querySelectorAll('.edit-perm-checkbox').forEach(cb => {
            cb.checked = perms.includes(cb.value);
        });
        
        new bootstrap.Modal(document.getElementById('permissionsModal')).show();
    }

    async function updateMember() {
        if(!currentEditId) return;
        
        const role = document.getElementById('perm-role').value;
        const permissions = [];
        document.querySelectorAll('.edit-perm-checkbox:checked').forEach(cb => permissions.push(cb.value));
        
        const btn = document.getElementById('btn-save-perm');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Saving...';
        btn.disabled = true;

        const token = localStorage.getItem('token');
        try {
            const response = await fetch(`/api/team/members/${currentEditId}`, {
                method: 'PUT',
                headers: { 
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}` 
                },
                body: JSON.stringify({ role, permissions })
            });

            if (response.ok) {
                Toastify({ text: "Permissions Updated", backgroundColor: "#00b074" }).showToast();
                bootstrap.Modal.getInstance(document.getElementById('permissionsModal')).hide();
                fetchTeam();
            } else {
                Toastify({ text: "Failed to update", backgroundColor: "#ff5b5c" }).showToast();
            }
        } catch (e) {
            console.error(e);
        } finally {
            btn.innerHTML = originalText;
            btn.disabled = false;
        }
    }
</script>
