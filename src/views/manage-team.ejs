<%- include('includes/header2') %>

<style>
    /* ============================================
       MODERN TEAM MANAGEMENT STYLES
       ============================================ */
    
    /* Gradient Header Banner */
    .team-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 16px;
        padding: 1.25rem 1.5rem;
        margin-bottom: 1.5rem;
        margin-top: 0.5rem;
        position: relative;
        overflow: hidden;
    }
    
    .team-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 400px;
        height: 400px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
    }
    
    .team-hero::after {
        content: '';
        position: absolute;
        bottom: -60%;
        left: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255,255,255,0.08);
        border-radius: 50%;
    }
    
    .team-hero h1 {
        color: #fff;
        font-weight: 700;
        font-size: 1.4rem;
        margin-bottom: 0.25rem;
        position: relative;
        z-index: 1;
    }
    
    .team-hero p {
        color: rgba(255,255,255,0.8);
        margin-bottom: 0;
        position: relative;
        z-index: 1;
    }
    
    /* Stats Cards */
    .stat-card {
        background: rgba(255,255,255,0.15);
        backdrop-filter: blur(10px);
        border-radius: 10px;
        padding: 0.6rem 1rem;
        text-align: center;
        border: 1px solid rgba(255,255,255,0.2);
        position: relative;
        z-index: 1;
    }
    
    .stat-card .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
    }
    
    .stat-card .stat-label {
        color: rgba(255,255,255,0.7);
        font-size: 0.85rem;
    }
    
    /* Team Member Cards */
    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 1.5rem;
    }
    
    .member-card {
        background: var(--custom-white);
        border-radius: 16px;
        padding: 1.5rem;
        border: 1px solid rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .member-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
    }
    
    .member-card.suspended {
        opacity: 0.6;
    }
    
    .member-card .member-avatar {
        width: 64px;
        height: 64px;
        border-radius: 16px;
        object-fit: cover;
        border: 3px solid #f0f0f0;
    }
    
    .member-card .member-info h5 {
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: var(--default-text-color);
    }
    
    .member-card .member-info p {
        color: #888;
        font-size: 0.85rem;
        margin-bottom: 0;
    }
    
    .member-card .role-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .role-badge.owner { background: linear-gradient(135deg, #667eea, #764ba2); color: #fff; }
    .role-badge.admin { background: linear-gradient(135deg, #f093fb, #f5576c); color: #fff; }
    .role-badge.member { background: #e9ecef; color: #495057; }
    
    .status-indicator {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 6px;
    }
    
    .status-indicator.active { background: #00b074; box-shadow: 0 0 8px rgba(0,176,116,0.5); }
    .status-indicator.suspended { background: #ff5b5c; }
    .status-indicator.invited { background: #ff9f43; }
    
    .member-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(0,0,0,0.05);
    }
    
    .member-actions .btn {
        flex: 1;
        padding: 0.5rem;
        font-size: 0.8rem;
    }
    
    /* Invite Button (Floating Style) */
    .invite-fab {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        border: none;
        font-size: 1.5rem;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .invite-fab:hover {
        transform: scale(1.1);
        box-shadow: 0 12px 35px rgba(102, 126, 234, 0.5);
    }
    
    /* Modal Enhancements */
    .modal-content {
        border-radius: 20px;
        border: none;
        overflow: hidden;
    }
    
    .modal-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        border: none;
        padding: 1.5rem;
    }
    
    .modal-header .btn-close {
        filter: brightness(0) invert(1);
    }
    
    .modal-header .modal-title {
        font-weight: 600;
    }
    
    .modal-body {
        padding: 1.5rem;
    }
    
    .modal-footer {
        border-top: 1px solid rgba(0,0,0,0.05);
        padding: 1rem 1.5rem;
    }
    
    /* Permission Checkboxes */
    .permission-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.75rem;
    }
    
    .permission-item {
        display: flex;
        align-items: center;
        padding: 0.75rem;
        background: rgba(102, 126, 234, 0.1);
        border: 1px solid rgba(102, 126, 234, 0.2);
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .permission-item:hover {
        background: rgba(102, 126, 234, 0.2);
        border-color: rgba(102, 126, 234, 0.4);
    }
    
    .permission-item input {
        margin-right: 0.5rem;
        accent-color: #667eea;
    }
    
    .permission-item span, .permission-item label {
        font-size: 0.85rem;
        margin: 0;
        cursor: pointer;
        color: var(--default-text-color);
    }
    
    /* Modal body dark mode */
    .modal-body {
        background: var(--custom-white);
    }
    
    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--custom-white);
        border-radius: 20px;
        border: 2px dashed #e0e0e0;
    }
    
    .empty-state i {
        font-size: 4rem;
        color: #ccc;
        margin-bottom: 1rem;
    }
    
    .empty-state h4 {
        color: #666;
        margin-bottom: 0.5rem;
    }
    
    .empty-state p {
        color: #999;
    }
    
    /* Skeleton Loading */
    .skeleton-card {
        background: var(--custom-white);
        border-radius: 16px;
        padding: 1.5rem;
        animation: pulse 1.5s infinite;
    }
    
    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
</style>

