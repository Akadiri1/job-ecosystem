        try {
            // 1. Fetch My Tasks
            const taskRes = await fetch('/api/tasks/my', { headers: { 'Authorization': `Bearer ${token}` } });
            if (taskRes.ok) {
                const taskData = await taskRes.json();
                renderEmployeeTasks(taskData.tasks || []);
            }

            // 2. Fetch Recent Activity (Notifications for now as proxy)
            const notifRes = await fetch('/api/notifications', { headers: { 'Authorization': `Bearer ${token}` } });
            if (notifRes.ok) {
                const notifData = await notifRes.json();
                renderEmployeeActivity(notifData.notifications || []);
            }
        } catch (e) { console.error('Error fetching employee data:', e); }
    }

    function renderEmployeeTasks(tasks) {
        // Update Lists
        const list = document.getElementById('employee-tasks-list');
        
        // Update Stats Counters (Dynamically Calculated from Real Data)
        const totalCount = tasks.length;
        const pendingCount = tasks.filter(t => t.status !== 'completed').length;
        const completedCount = tasks.filter(t => t.status === 'completed').length;

        const setSafe = (id, val) => { const el = document.getElementById(id); if(el) el.innerText = val; };
        setSafe('stats-employee-tasks-count', totalCount);
        setSafe('stats-employee-pending-count', pendingCount);
        setSafe('stats-employee-completed-count', completedCount);
        
        if (!list) return;

        if (tasks.length === 0) {
            list.innerHTML = `<li class="list-group-item text-center text-muted py-4 border-0">No active tasks found.</li>`;
            return;
        }

        // Show top 5 tasks
        const recentTasks = tasks.slice(0, 5);
        
        list.innerHTML = recentTasks.map(task => {
            let priorityClass = 'bg-secondary';
            if(task.priority === 'high') priorityClass = 'bg-danger';
            if(task.priority === 'medium') priorityClass = 'bg-warning';
            
            let statusBadge = '';
            if(task.status === 'todo') statusBadge = '<span class="badge bg-light text-dark">To Do</span>';
            if(task.status === 'in_progress') statusBadge = '<span class="badge bg-info-transparent">In Progress</span>';
            if(task.status === 'review') statusBadge = '<span class="badge bg-warning-transparent">Review</span>';
            if(task.status === 'completed') statusBadge = '<span class="badge bg-success-transparent">Done</span>';

            const due = task.due_date ? new Date(task.due_date).toLocaleDateString() : 'No Date';

            return `
            <li class="list-group-item border-0 border-bottom px-0 py-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-xs rounded-circle ${priorityClass} me-3 flex-shrink-0">
                            <i class="ri-checkbox-blank-circle-fill fs-10 text-white opacity-50"></i>
                        </div>
                        <div>
                            <h6 class="mb-1 fw-semibold text-truncate" style="max-width: 250px;">${task.title}</h6>
                            <p class="fs-11 text-muted mb-0"><i class="ri-calendar-line me-1"></i> Due: ${due}</p>
                        </div>
                    </div>
                    <div>${statusBadge}</div>
                </div>
            </li>
            `;
        }).join('');
    }

    function renderEmployeeActivity(notifications) {
        // Use notifications as a proxy for "Activity" since we don't have a dedicated Activity feed yet
        const list = document.getElementById('employee-activity-list');
        if (!list) return;

        if (notifications.length === 0) {
            list.innerHTML = `<li class="d-flex mb-4"><div class="flex-grow-1"><p class="text-muted text-center">No recent activity.</p></div></li>`;
            return;
        }

        list.innerHTML = notifications.slice(0, 5).map(n => {
            let dateStr = 'Just now';
            try {
                if(n.created_at) {
                    const d = new Date(n.created_at);
                    if(!isNaN(d.getTime())) dateStr = d.toLocaleString();
                }
            } catch(e) {}
            
            return `
            <li class="d-flex mb-4">
                <div class="position-relative me-3">
                    <span class="avatar avatar-xs rounded-circle bg-primary-transparent">
                        <i class="ri-notification-3-line text-primary"></i>
                    </span>
                    <span class="position-absolute top-0 start-100 translate-middle p-1 bg-primary border border-light rounded-circle"></span>
                </div>
                <div class="flex-grow-1">
                    <h6 class="mb-1 fs-13 fw-semibold">${n.title}</h6>
                    <p class="mb-0 fs-12 text-muted">${n.message}</p>
                    <small class="text-muted mt-1 d-block">${dateStr}</small>
                </div>
            </li>
        `}).join('');
    }

    // Run Logic when page loads
    document.addEventListener('DOMContentLoaded', initDashboard);
</script>

