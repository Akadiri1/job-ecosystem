<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Job Ecosystem</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/icons/favicon-32x32.png">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.0.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body>

<style>
/* ============================================
   MODERN LOGIN PAGE STYLES
   ============================================ */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.auth-container {
    min-height: 100vh;
    display: flex;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    position: relative;
    overflow: hidden;
}

/* Animated background shapes */
.auth-container::before,
.auth-container::after {
    content: '';
    position: absolute;
    border-radius: 50%;
    animation: float 20s ease-in-out infinite;
}

.auth-container::before {
    width: 600px;
    height: 600px;
    background: rgba(255, 255, 255, 0.05);
    top: -200px;
    left: -200px;
}

.auth-container::after {
    width: 400px;
    height: 400px;
    background: rgba(255, 255, 255, 0.08);
    bottom: -150px;
    right: -100px;
    animation-delay: -10s;
}

@keyframes float {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -30px) rotate(5deg); }
    66% { transform: translate(-20px, 20px) rotate(-5deg); }
}

/* Left Branding Panel */
.auth-branding {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 3rem;
    position: relative;
    z-index: 1;
}

.auth-branding-content {
    max-width: 400px;
    text-align: center;
    color: white;
}

.auth-logo {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
}

.auth-logo i {
    font-size: 2.5rem;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.75rem;
    border-radius: 16px;
}

.auth-tagline {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 2rem;
    line-height: 1.6;
}

.auth-features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: left;
}

.auth-feature {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: rgba(255, 255, 255, 0.1);
    padding: 1rem 1.25rem;
    border-radius: 12px;
    backdrop-filter: blur(10px);
}

.auth-feature i {
    font-size: 1.5rem;
    color: #ffd700;
}

.auth-feature span {
    font-size: 0.95rem;
    opacity: 0.95;
}

/* Right Form Panel */
.auth-form-panel {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
    z-index: 1;
}

.auth-card {
    width: 100%;
    max-width: 420px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
}

.auth-card-header {
    text-align: center;
    margin-bottom: 2rem;
}

.auth-card-header h1 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1a1a2e;
    margin-bottom: 0.5rem;
}

.auth-card-header p {
    color: #6c757d;
    font-size: 0.95rem;
}

/* Social Login Buttons */
.social-login-group {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.social-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1rem;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    background: white;
    color: #333;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease;
}

.social-btn:hover {
    border-color: #667eea;
    background: #f8f9fa;
    transform: translateY(-2px);
}

.social-btn i {
    font-size: 1.25rem;
}

.social-btn.google i { color: #DB4437; }
.social-btn.facebook i { color: #4267B2; }

/* Divider */
.auth-divider {
    display: flex;
    align-items: center;
    margin: 1.5rem 0;
    gap: 1rem;
}

.auth-divider::before,
.auth-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: #e9ecef;
}

.auth-divider span {
    color: #adb5bd;
    font-size: 0.85rem;
    font-weight: 500;
}

/* Form Inputs */
.form-group {
    margin-bottom: 1.25rem;
}

.form-group label {
    display: block;
    color: #495057;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
}

.input-wrapper {
    position: relative;
}

.input-wrapper i.input-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #adb5bd;
    font-size: 1.1rem;
    transition: color 0.3s ease;
}

.form-input {
    width: 100%;
    padding: 0.875rem 1rem 0.875rem 2.75rem;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    font-size: 1rem;
    color: #333;
    background: #f8f9fa;
    transition: all 0.3s ease;
}

.form-input:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
}

.form-input:focus + i.input-icon,
.input-wrapper:focus-within i.input-icon {
    color: #667eea;
}

.form-input::placeholder {
    color: #adb5bd;
}

/* Password toggle */
.toggle-password {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #adb5bd;
    cursor: pointer;
    padding: 0.25rem;
    font-size: 1.1rem;
    transition: color 0.3s ease;
}

.toggle-password:hover {
    color: #667eea;
}

/* Remember & Forgot */
.form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
}

.remember-me {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #495057;
    cursor: pointer;
}

.remember-me input[type="checkbox"] {
    width: 16px;
    height: 16px;
    accent-color: #667eea;
}

.forgot-link {
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
}

.forgot-link:hover {
    color: #764ba2;
    text-decoration: underline;
}

/* Submit Button */
.submit-btn {
    width: 100%;
    padding: 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 12px;
    color: white;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
}

.submit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
}

/* Message Box */
.message-box {
    padding: 0.875rem;
    border-radius: 10px;
    text-align: center;
    margin-bottom: 1rem;
    font-weight: 500;
    font-size: 0.9rem;
    display: none;
}

.message-box.error {
    background: #fee2e2;
    color: #dc2626;
    border: 1px solid #fecaca;
    display: block;
}

.message-box.success {
    background: #d1fae5;
    color: #059669;
    border: 1px solid #a7f3d0;
    display: block;
}

.message-box.loading {
    background: #e0e7ff;
    color: #4f46e5;
    border: 1px solid #c7d2fe;
    display: block;
}

/* Register Link */
.auth-footer {
    text-align: center;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e9ecef;
    color: #6c757d;
    font-size: 0.9rem;
}

.auth-footer a {
    color: #667eea;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease;
}

.auth-footer a:hover {
    color: #764ba2;
    text-decoration: underline;
}

/* Spinner */
.spinner {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

/* Mobile Responsive */
@media (max-width: 992px) {
    .auth-branding {
        display: none;
    }
    
    .auth-form-panel {
        flex: 1;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    }
    
    .auth-card {
        margin: 1rem;
    }
    
    .mobile-logo {
        display: flex !important;
    }
}

.mobile-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    color: #667eea;
    font-size: 1.5rem;
    font-weight: 700;
}

.mobile-logo i {
    font-size: 2rem;
    background: linear-gradient(135deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

@media (max-width: 480px) {
    .auth-card {
        padding: 1.5rem;
        border-radius: 20px;
    }
    
    .social-login-group {
        flex-direction: column;
    }
}
</style>

<div class="auth-container">
    <!-- Left Branding Panel -->
    <div class="auth-branding">
        <div class="auth-branding-content">
            <div class="auth-logo">
                <i class="ri-briefcase-4-fill"></i>
                <span>Job Ecosystem</span>
            </div>
            <p class="auth-tagline">
                Find your dream job or hire the perfect candidate. Your career journey starts here.
            </p>
            <div class="auth-features">
                <div class="auth-feature">
                    <i class="ri-search-line"></i>
                    <span>Thousands of job opportunities</span>
                </div>
                <div class="auth-feature">
                    <i class="ri-building-2-line"></i>
                    <span>Connect with top employers</span>
                </div>
                <div class="auth-feature">
                    <i class="ri-robot-line"></i>
                    <span>AI-powered job matching</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Form Panel -->
    <div class="auth-form-panel">
        <div class="auth-card">
            <div class="auth-card-header">
                <div class="mobile-logo">
                    <i class="ri-briefcase-4-fill"></i>
                    <span>Job Ecosystem</span>
                </div>
                <h1>Welcome Back</h1>
                <p>Sign in to continue to your dashboard</p>
            </div>

            <!-- Social Login -->
            <div class="social-login-group">
                <a href="/api/auth/google" class="social-btn google">
                    <i class="ri-google-fill"></i>
                    Google
                </a>
                <a href="/api/auth/facebook" class="social-btn facebook">
                    <i class="ri-facebook-fill"></i>
                    Facebook
                </a>
            </div>

            <div class="auth-divider">
                <span>or continue with email</span>
            </div>

            <!-- Message Box -->
            <div id="messageBox" class="message-box"></div>

            <!-- Login Form -->
            <form id="loginForm">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <div class="input-wrapper">
                        <input 
                            type="email" 
                            id="email" 
                            class="form-input" 
                            placeholder="Enter your email"
                            required
                        >
                        <i class="ri-mail-line input-icon"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-wrapper">
                        <input 
                            type="password" 
                            id="password" 
                            class="form-input" 
                            placeholder="Enter your password"
                            required
                        >
                        <i class="ri-lock-line input-icon"></i>
                        <button type="button" class="toggle-password" onclick="togglePassword()">
                            <i class="ri-eye-off-line" id="toggleIcon"></i>
                        </button>
                    </div>
                </div>

                <div class="form-options">
                    <label class="remember-me">
                        <input type="checkbox" id="rememberMe">
                        Remember me
                    </label>
                    <a href="/forgot-password" class="forgot-link">Forgot password?</a>
                </div>

                <button type="submit" class="submit-btn" id="submitBtn">
                    <i class="ri-login-box-line"></i>
                    Sign In
                </button>
            </form>

            <div class="auth-footer">
                Don't have an account? <a href="/signup">Create Account</a>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    // Clear existing session
    localStorage.removeItem('token');
    localStorage.removeItem('user');
    sessionStorage.clear();
    
    // Auto-fill from URL params (for invite links)
    const urlParams = new URLSearchParams(window.location.search);
    const email = urlParams.get('email');
    if (email) {
        document.getElementById('email').value = email;
    }
});

// Toggle password visibility
function togglePassword() {
    const passwordInput = document.getElementById('password');
    const toggleIcon = document.getElementById('toggleIcon');
    
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleIcon.className = 'ri-eye-line';
    } else {
        passwordInput.type = 'password';
        toggleIcon.className = 'ri-eye-off-line';
    }
}

// Handle form submission
document.getElementById('loginForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const messageBox = document.getElementById('messageBox');
    const submitBtn = document.getElementById('submitBtn');
    
    // Show loading state
    messageBox.className = 'message-box loading';
    messageBox.textContent = 'Signing you in...';
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<div class="spinner"></div> Signing In...';
    
    const formData = {
        email: document.getElementById('email').value,
        password: document.getElementById('password').value
    };
    
    try {
        const response = await fetch('/api/auth/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(formData)
        });
        
        const data = await response.json();
        
        if (response.ok) {
            messageBox.className = 'message-box success';
            messageBox.textContent = 'âœ“ Login successful! Redirecting...';
            
            localStorage.setItem('token', data.token);
            localStorage.setItem('user', JSON.stringify(data.user));
            
            setTimeout(() => {
                const role = data.user.role || 'job_seeker';
                let redirectPath = '/dashboard/seeker';
                
                if (role === 'employer') redirectPath = '/dashboard/employer';
                else if (role === 'employee') redirectPath = '/dashboard/employee';
                else if (role === 'admin') redirectPath = '/dashboard/admin';
                
                window.location.href = redirectPath;
            }, 1000);
        } else {
            messageBox.className = 'message-box error';
            messageBox.textContent = data.error || 'Invalid email or password';
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="ri-login-box-line"></i> Sign In';
        }
    } catch (err) {
        console.error('Login error:', err);
        messageBox.className = 'message-box error';
        messageBox.textContent = 'Connection error. Please try again.';
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<i class="ri-login-box-line"></i> Sign In';
    }
});
</script>

</body>
</html>