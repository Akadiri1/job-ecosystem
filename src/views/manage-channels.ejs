<%- include('includes/header2') %>

<style>
    /* ============================================
       MODERN CHANNEL MANAGEMENT STYLES
       ============================================ */
    
    /* Gradient Header Banner */
    .channels-hero {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        border-radius: 16px;
        padding: 1.25rem 1.5rem;
        margin-bottom: 1.5rem;
        margin-top: 0.5rem;
        position: relative;
        overflow: hidden;
    }
    
    .channels-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 400px;
        height: 400px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
    }
    
    .channels-hero h1 {
        color: #fff;
        font-weight: 700;
        font-size: 1.4rem;
        margin-bottom: 0.25rem;
        position: relative;
        z-index: 1;
    }
    
    .channels-hero p {
        color: rgba(255,255,255,0.8);
        margin-bottom: 0;
        position: relative;
        z-index: 1;
    }
    
    /* Channel Cards Grid */
    .channels-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.25rem;
    }
    
    .channel-card {
        background: var(--custom-white);
        border-radius: 16px;
        padding: 1.5rem;
        border: 1px solid rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .channel-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 40px rgba(17, 153, 142, 0.15);
    }
    
    .channel-card::before {
        content: '#';
        position: absolute;
        right: -20px;
        top: -20px;
        font-size: 120px;
        font-weight: 800;
        color: rgba(0,0,0,0.02);
        line-height: 1;
    }
    
    .channel-icon {
        width: 56px;
        height: 56px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #fff;
    }
    
    .channel-icon.public {
        background: linear-gradient(135deg, #11998e, #38ef7d);
    }
    
    .channel-icon.private {
        background: linear-gradient(135deg, #f093fb, #f5576c);
    }
    
    .channel-name {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--default-text-color);
        margin-bottom: 0.25rem;
    }
    
    .channel-desc {
        color: #888;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        min-height: 2.7rem;
    }
    
    .channel-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(0,0,0,0.05);
    }
    
    .channel-meta .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #666;
        font-size: 0.85rem;
    }
    
    .type-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .type-badge.public {
        background: linear-gradient(135deg, #11998e, #38ef7d);
        color: #fff;
    }
    
    .type-badge.private {
        background: linear-gradient(135deg, #f093fb, #f5576c);
        color: #fff;
    }
    
    .channel-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }
    
    .channel-actions .btn {
        flex: 1;
        padding: 0.5rem;
        font-size: 0.8rem;
    }
    
    /* Create Button FAB */
    .create-fab {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: #fff;
        border: none;
        font-size: 1.5rem;
        box-shadow: 0 8px 25px rgba(17, 153, 142, 0.4);
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .create-fab:hover {
        transform: scale(1.1);
        box-shadow: 0 12px 35px rgba(17, 153, 142, 0.5);
    }
    
    /* Modal Enhancements */
    .modal-content {
        border-radius: 20px;
        border: none;
        overflow: hidden;
    }
    
    .modal-header.channels-modal {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: #fff;
        border: none;
        padding: 1.5rem;
    }
    
    .modal-header.channels-modal .btn-close {
        filter: brightness(0) invert(1);
    }
    
    /* Members Section in Modal */
    .members-section {
        background: rgba(17, 153, 142, 0.08);
        border-radius: 12px;
        padding: 1rem;
        max-height: 300px;
        overflow-y: auto;
    }
    
    .member-item {
        display: flex;
        align-items: center;
        padding: 0.75rem;
        background: var(--custom-white);
        border: 1px solid rgba(0,0,0,0.05);
        border-radius: 8px;
        margin-bottom: 0.5rem;
    }
    
    .member-item:last-child {
        margin-bottom: 0;
    }
    
    .member-item img {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        object-fit: cover;
        margin-right: 0.75rem;
    }
    
    .add-all-btn {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        color: #fff;
        padding: 0.75rem;
        border-radius: 10px;
        font-weight: 600;
        width: 100%;
        transition: all 0.3s ease;
    }
    
    .add-all-btn:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }
    
    /* Modal body dark mode */
    .modal-body {
        background: var(--custom-white);
    }
    
    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--custom-white);
        border-radius: 20px;
        border: 2px dashed #e0e0e0;
        grid-column: 1 / -1;
    }
    
    .empty-state i {
        font-size: 4rem;
        color: #ccc;
        margin-bottom: 1rem;
    }
    
    /* Skeleton */
    .skeleton-card {
        background: var(--custom-white);
        border-radius: 16px;
        padding: 1.5rem;
        animation: pulse 1.5s infinite;
    }
    
    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
</style>

