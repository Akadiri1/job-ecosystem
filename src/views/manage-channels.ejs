<!-- Edit Channel Modal -->
<div class="modal fade" id="editChannelModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header channels-modal">
                <h6 class="modal-title"><i class="ri-edit-line me-2"></i>Edit Channel</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="mb-3">
                    <label class="form-label fw-medium">Channel Name</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">#</span>
                        <input type="text" class="form-control border-start-0" id="edit-channel-name">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-medium">Privacy</label>
                    <select class="form-select" id="edit-channel-type">
                        <option value="public">Public</option>
                        <option value="private">Private</option>
                    </select>
                </div>
                <div class="mb-0">
                     <label class="form-label fw-medium">Description</label>
                     <textarea class="form-control" id="edit-channel-desc" rows="2"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btn-update-channel" onclick="updateChannel()">
                    <i class="ri-save-line me-1"></i> Save Changes
                </button>
            </div>
        </div>
    </div>
</div>

<%- include('includes/footer2') %>

<script>
    let currentManageChannelId = null;
    let currentEditChannelId = null;
    let allChannels = [];

    document.addEventListener("DOMContentLoaded", function() {
        loadChannels();
    });

    async function loadChannels() {
        const token = localStorage.getItem('token');
        try {
            const res = await fetch('/api/chat/channels', { headers: { 'Authorization': `Bearer ${token}` } });
            const data = await res.json();
            
            const grid = document.getElementById('channels-grid');
            
            if(data.success && data.channels.length > 0) {
                allChannels = data.channels;
                grid.innerHTML = data.channels.map(c => `
                    <div class="channel-card">
                        <div class="d-flex align-items-start mb-3">
                            <div class="channel-icon ${c.type}">
                                <i class="ri-${c.type === 'public' ? 'global-line' : 'lock-line'}"></i>
                            </div>
                            <div class="ms-3 flex-fill">
                                <div class="channel-name">#${escapeHtml(c.name)}</div>
                                <span class="type-badge ${c.type}">${c.type}</span>
                            </div>
                        </div>
                        <div class="channel-desc">${escapeHtml(c.description) || 'No description'}</div>
                        <div class="channel-meta">
                            <div class="meta-item">
                                <i class="ri-calendar-line"></i>
                                <span>${new Date(c.createdAt).toLocaleDateString()}</span>
                            </div>
                        </div>
                        <div class="channel-actions">
                            <button class="btn btn-outline-primary" onclick="openManageMembers('${c.id}', '${escapeHtml(c.name)}')">
                                <i class="ri-group-line me-1"></i>Members
                            </button>
                            <button class="btn btn-outline-secondary" onclick="openEditChannel('${c.id}', '${escapeHtml(c.name)}', '${c.type}', '${escapeHtml(c.description || '')}')">
                                <i class="ri-edit-line me-1"></i>Edit
                            </button>
                            <button class="btn btn-outline-danger" onclick="deleteChannel('${c.id}')">
                                <i class="ri-delete-bin-line"></i>
                            </button>
                        </div>
                    </div>
                `).join('');
            } else {
                grid.innerHTML = `
                    <div class="empty-state">
                        <i class="ri-hashtag"></i>
                        <h4>No Channels Yet</h4>
                        <p class="text-muted">Create your first channel to start team communication</p>
                        <button class="btn btn-success mt-3" data-bs-toggle="modal" data-bs-target="#createChannelModal">
                            <i class="ri-add-line me-1"></i> Create Channel
                        </button>
                    </div>
                `;
            }
        } catch(e) { console.error(e); }
    }

    async function createChannel() {
        const name = document.getElementById('new-channel-name').value;
        const type = document.querySelector('input[name="channel-type"]:checked').value;
        const description = document.getElementById('new-channel-desc').value;
        
        if(!name) {
            Toastify({ text: "Please enter a channel name", backgroundColor: "#ff5b5c" }).showToast();
            return;
        }

        const btn = document.getElementById('btn-create-channel');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Creating...';
        btn.disabled = true;
        
        const token = localStorage.getItem('token');
        try {
             const res = await fetch('/api/chat/channels', {
                 method: 'POST',
                 headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
                 body: JSON.stringify({ name, type, description })
             });
             const data = await res.json();
             if(data.success) {
                 bootstrap.Modal.getInstance(document.getElementById('createChannelModal')).hide();
                 loadChannels();
                 Toastify({ text: "Channel created! ðŸŽ‰", backgroundColor: "#00b074" }).showToast();
                 // Reset form
                 document.getElementById('new-channel-name').value = '';
                 document.getElementById('new-channel-desc').value = '';
                 document.getElementById('type-public').checked = true;
             } else {
                  Toastify({ text: data.message || "Failed to create", backgroundColor: "#ff5b5c" }).showToast();
             }
        } catch(e) { console.error(e); }
        finally {
            btn.innerHTML = originalText;
            btn.disabled = false;
        }
    }

    async function deleteChannel(id) {
        if(!confirm("Delete this channel and all messages? This cannot be undone.")) return;
        
        const token = localStorage.getItem('token');
        try {
            const res = await fetch(`/api/chat/channels/${id}`, {
                 method: 'DELETE',
                 headers: { 'Authorization': `Bearer ${token}` }
            });
            if(res.ok) {
                 Toastify({ text: "Channel Deleted", backgroundColor: "#00b074" }).showToast();
                 loadChannels();
            } else {
                 const data = await res.json();
                 Toastify({ text: data.message || "Failed to delete", backgroundColor: "#ff5b5c" }).showToast();
            }
        } catch(e) { console.error(e); }
    }
    
    function openEditChannel(id, name, type, desc) {
        currentEditChannelId = id;
        document.getElementById('edit-channel-name').value = name;
        document.getElementById('edit-channel-type').value = type;
        document.getElementById('edit-channel-desc').value = desc;
        new bootstrap.Modal(document.getElementById('editChannelModal')).show();
    }
    
    async function updateChannel() {
        if(!currentEditChannelId) return;
        
        const name = document.getElementById('edit-channel-name').value;
        const type = document.getElementById('edit-channel-type').value;
        const description = document.getElementById('edit-channel-desc').value;
         
        const btn = document.getElementById('btn-update-channel');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Saving...';
        btn.disabled = true;

        const token = localStorage.getItem('token');
        try {
            const res = await fetch(`/api/chat/channels/${currentEditChannelId}`, {
                 method: 'PUT',
                 headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
                 body: JSON.stringify({ name, type, description })
            });
            if(res.ok) {
                 Toastify({ text: "Channel Updated", backgroundColor: "#00b074" }).showToast();
                 bootstrap.Modal.getInstance(document.getElementById('editChannelModal')).hide();
                 loadChannels();
            } else {
                 Toastify({ text: "Failed to update", backgroundColor: "#ff5b5c" }).showToast();
            }
        } catch(e) { console.error(e); }
        finally {
             btn.innerHTML = originalText;
             btn.disabled = false;
        }
    }

    async function openManageMembers(channelId, name) {
        currentManageChannelId = channelId;
        document.getElementById('manage-channel-name').textContent = '#' + name;
        
        new bootstrap.Modal(document.getElementById('manageMembersModal')).show();
        loadMemberDetails(channelId);
    }
    
    async function loadMemberDetails(channelId) {
        const list = document.getElementById('current-members-list');
        const select = document.getElementById('add-member-select');
        list.innerHTML = '<div class="text-center text-muted py-4">Loading...</div>';
        
        const token = localStorage.getItem('token');
        
        const [resMembers, resTeam] = await Promise.all([
             fetch(`/api/chat/channels/${channelId}/members`, { headers: { 'Authorization': `Bearer ${token}` } }),
             fetch('/api/team/members', { headers: { 'Authorization': `Bearer ${token}` } })
        ]);
        
        const dataMembers = await resMembers.json();
        const dataTeam = await resTeam.json();
        
        const currentMembers = dataMembers.success ? dataMembers.members : [];
        const allTeam = dataTeam.success ? dataTeam.members : [];
        
        // Render Current Members
        if(currentMembers.length > 0) {
            list.innerHTML = currentMembers.map(m => `
                <div class="member-item">
                    <img src="${m.avatar || '/assets/images/faces/9.jpg'}" alt="">
                    <div class="flex-fill">
                        <div class="fw-medium">${escapeHtml(m.full_name)}</div>
                        <small class="text-muted">${m.role}</small>
                    </div>
                </div>
            `).join('');
        } else {
            list.innerHTML = '<div class="text-center text-muted py-4">No members yet</div>';
        }
        
        // Render Add Dropdown
        const existingIds = currentMembers.map(m => m.id);
        const potential = allTeam.filter(t => !existingIds.includes(t.user.id));
        
        if(potential.length > 0) {
            select.innerHTML = '<option value="">Select member...</option>' + 
                 potential.map(t => `<option value="${t.user.id}">${escapeHtml(t.user.full_name)}</option>`).join('');
        } else {
            select.innerHTML = '<option value="">All team members added</option>';
        }
    }
    
    async function addSelectedMember() {
        const userId = document.getElementById('add-member-select').value;
        if(!userId) return;
        
        const btn = document.getElementById('btn-add-member');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Adding...';
        btn.disabled = true;

        const token = localStorage.getItem('token');
        const res = await fetch(`/api/chat/channels/${currentManageChannelId}/members`, {
            method: 'POST',
             headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
             body: JSON.stringify({ userId })
        });
        const data = await res.json();
        
        if(data.success) {
             Toastify({ text: "Member added!", backgroundColor: "#00b074" }).showToast();
             loadMemberDetails(currentManageChannelId);
        } else {
             Toastify({ text: data.message || "Failed to add", backgroundColor: "#ff5b5c" }).showToast();
        }

        btn.innerHTML = originalText;
        btn.disabled = false;
    }
    
    async function addAllTeam() {
        if(!confirm("Add ALL team members to this channel?")) return;
        
        const btn = document.getElementById('btn-add-all');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Adding All...';
        btn.disabled = true;

        const token = localStorage.getItem('token');
        const res = await fetch(`/api/chat/channels/${currentManageChannelId}/add-all`, {
             method: 'POST',
             headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await res.json();
        
        if(data.success) {
             Toastify({ text: "All team members added! ðŸŽ‰", backgroundColor: "#00b074" }).showToast();
